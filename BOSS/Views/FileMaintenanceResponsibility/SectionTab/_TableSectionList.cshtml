@model IEnumerable<BOSS.Models.FMmodels.FMResCenterModels.SectionList>
@{
    BOSSEFConnectionString BOSSDB = new BOSSEFConnectionString();
}
@using BOSS.Models;

<div class="row">
    <div class="col">
        <table class="table table-striped table-bordered table-condensed zero-configuration w-100 table-smss-hover">
            <thead class="text-center">
                <tr>
                    <th>Department</th>
                    <th>Function</th>
                    <th>Office Section</th>
                    <th width="5%">Action</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var Items in Model)
                    {
                        var DeleteConfirmationMess = "Are you sure do you want to delete this?";
                        var DeleteSuccesMess = "Successfully Deleted";

                        var UpdateDeptSection = "<button class=\"btn btn-icon btn-block black btn-menuorange\" type=\"button\" onclick=\"GlobalEdit('Get_UpdateSection','" + @Items.SectionID + "')\"> <i class='la la-edit'></i> Edit</button>";
                        var RemoveDeptSection = "<button class=\"btn btn-icon btn-block btn-menuRed\" type=\"button\" onclick =\"swalConfirmation('" + @DeleteConfirmationMess + "', '" + @Items.SectionTitle + "','" + @DeleteSuccesMess + "','GlobalDelete(" + @Items.SectionID + ",&quot;DeleteSection&quot;)')\"><i class='la la-trash'></i> Delete</button>";

                        var ActionDeptSection = UpdateDeptSection + RemoveDeptSection;
                        <tr>
                            <td>@Items.DeptTitle</td>
                            <td>@Items.FunctionTitle</td>
                            <td>@Items.SectionTitle</td>
                            <td class="text-center">
                                <button type="button" onfocusout="PopoveLostFocus()"
                                        class="btn btn-m btn-btnbackcolor popover-trigger"
                                        data-toggle="popover" data-content="@ActionDeptSection"
                                        data-original-title="" data-html="true" data-placement="left">
                                    <i class="la la-bars"></i>
                                </button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
<script>
    $(function () {
        LoadDataTable();
    })
</script>