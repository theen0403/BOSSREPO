@model IEnumerable<BOSS.Models.FMmodels.FMBarangayModels.BarangayNameList>
@{
    BOSSEFConnectionString BOSSDB = new BOSSEFConnectionString();
}
@using BOSS.Models;
<div class="row">
    <div class="col-xl-2 col-lg-2"></div>
    <div class="col-xl-8 col-lg-8">
        <table class="table table-striped zero-configuration table-bordered dataTable scroll-horizontal table-smss-hover no-footer m-0 w-100 t-has-destination">
            <thead>
                <tr>
                    <th>Barangay Name</th>
                    <th width="5px">Action</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var Items in Model)
                    {
                        var Update = "<button class='btn btn-icon black btn-menuorange btn-block border-0' id='btnEditBrgyID' BrgyAttr='" + Items.BrgyID + "'><i class='ft-edit'></i> Edit</button>";
                        var Remove = "<button class='btn btn-icon btn-menuRed white btn-block border-0' id='btnDeleteBrgyID' BrgyAttr='" + Items.BrgyID + "'><i class='la la-trash'></i> Delete</button>";


                        var Action = Update + Remove;

                        <tr>
                            <td>@Items.BrgyName</td>
                            <td class="text-center">
                                <button type="button" onfocusout="PopoveLostFocus()"
                                        class="btn btn-m btn-btnbackcolor popover-trigger"
                                        data-toggle="popover" data-content="@Action" data-html="true" data-placement="left">
                                    <i class="la la-bars"></i>
                                </button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
<script>
    $(function () {
        LoadDataTable();
    })
</script>