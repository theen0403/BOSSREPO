                                    </button>

                                    <button type="button" class="btn btn-btnbackcolor btn-min-width mr-1 mb-1 float-right"
                                            data-toggle="modal"
                                            data-target="#ViewAddAccountModal"
                                            onclick="OpenViewAddAccountModal()">
                                        Add Account/s
                                    </button>

                                    <button type="button" class="btn btn-btnbackcolor btn-min-width mr-1 mb-1 float-right">Save</button>
                                </div>
                            </div>
                            @*Personal Services Table*@
