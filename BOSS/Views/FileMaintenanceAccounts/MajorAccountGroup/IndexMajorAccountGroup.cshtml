
<div class="row mt-1">
    <div class="col-xl-1">
    </div>
    <div class="col-xl-2 col-lg-3 col-md-3">
        <div class="form-group">
            <label class="custom-form-margin">Revision Year</label>
            <span class="input-group-append">
                <select class="form-control">
                    <option>2015</option>
                    <option>2016</option>
                    <option>2017</option>
                    <option>2018</option>
                </select>
                <button type="button" class="btn btn-warning btn-sm m-left" data-toggle="modal" data-target="#ViewAddRevYearMajorModal" onclick="GetAddAddRevYearMajor()"><strong>+</strong></button>
            </span>
        </div>
    </div>
    <div class="col-xl-4 col-lg-5 col-md-5">
        <div class="form-group">
            <label class="custom-form-margin">Allotment Class</label>
            <span class="input-group-append">
                <select class="form-control">
                    <option>Personal Services</option>
                    <option>Capital Outlay</option>
                    <option>Maintenance and Other Operating Expenses</option>
                    <option>Other Operating Expenses</option>
                </select>
                <button type="button" class="btn btn-warning btn-sm m-left" data-toggle="modal" data-target="#ViewAddAllomentMajorModal" onclick="GetAddAddAllomentClassMajor()"><strong>+</strong></button>
            </span>
        </div>
    </div>
    <div class="col-xl-4 col-lg-4 col-md-4">
        <div class="form-group">
            <label class="custom-form-margin">Accounts</label>
            <span class="input-group-append">
                <select class="form-control">
                    <option>Asset</option>
                    <option>Liabilities</option>
                    <option>Equity</option>
                    <option>Income</option>
                    <option>Expenses</option>
                </select>
                <button type="button" class="btn btn-warning btn-sm m-left" data-toggle="modal" data-target="#ViewAddAccntMajorModal" onclick="GetAddAddAccntClassMajor()"><strong>+</strong></button>
            </span>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-xl-1">
    </div>
    <div class="col-xl-5 col-lg-6 col-md-6">
        <div class="form-group">
            <label class="custom-form-margin">Major Account Group</label>
            <input type="text" class="form-control" />
        </div>
    </div>
    <div class="col-xl-2 col-lg-4 col-md-4">
        <label class="custom-form-margin"><b>Account Code</b></label>
        <div class="input-group mt-0">
            <span class="input-group-addon" id="basic-addon1"><b>1 -</b></span>
            <input type="text" class="form-control" />
        </div>
    </div>
</div>
<div class="row mb-2">
    <div class="col-xl-1">
    </div>
    <div class="col-xl-10">
        <div class="form-group">
            <button type="button" class="btn btn-menuRed btn-min-width ml-1 float-right" onclick="GetRevisionCOADT()">
                Cancel
            </button>
            <button type="submit" class="btn btn-btnbackcolor btn-min-width float-right">
                Add
            </button>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xl-1"></div>
    <div class="col-xl-10">
        <table class="table table-responsive table-striped table-bordered table-condensed zero-configuration w-100 table-smss-hover">
            <thead class="text-center">
                <tr>
                    <th width="20%">Revision Year</th>
                    <th>Allotment Class</th>
                    <th>Accounts</th>
                    <th>Major Account Group</th>
                    <th width="5%">Account Code</th>
                    <th width="5%">Action</th>
                </tr>
            </thead>
            <tbody>

                @{
                    var DeleteConfirmationMess = "Are you sure do you want to delete this?";
                    var DeleteSuccesMess = "Successfully Deleted";
                    var successUpdate = "Successfully Updated!";

                    var Update = "<div class=\"row m-small\"><button class=\"btn btn-icon black btn-menuorange form-control m-small my-0\" style=\"border-color: white \" type=\"button\" onclick=\"swalSuccess('" + successUpdate + "')\"> <i class='la la-edit'></i> Edit</button></div>";
                    var Remove = "<div class=\"row m-small\"><button class=\"btn btn-icon btn-menuRed white form-control m-small my-0\" style=\"border-color: white \" type=\"button\" onclick=\"swalConfirmation('" + @DeleteConfirmationMess + "', '', '" + @DeleteSuccesMess + "')\"><i class='la la-trash'></i> Delete</button></div>";

                    var ActionAS = Update + Remove;
                }
                <tr>
                    <td class="text-center">2015</td>
                    <td>Capital Outlay</td>
                    <td>Asset</td>
                    <td>Cash</td>
                    <td class="text-center">1-01</td>
                    <td class="text-center">
                        @{
                            <button type="button" onfocusout="PopoveLostFocus()"
                                    class="btn btn-m btn-btnbackcolor popover-trigger" style="padding:5px;"
                                    data-toggle="popover" data-content="@ActionAS"
                                    data-html="true" data-placement="left">
                                <i class="la la-bars"></i>
                            </button>
                        }
                    </td>
                </tr>
                <tr>
                    <td class="text-center">2015</td>
                    <td>N/A</td>
                    <td>Liabilities</td>
                    <td>Financial Liabilities</td>
                    <td class="text-center">2-01</td>
                    <td class="text-center">
                        @{
                            <button type="button" onfocusout="PopoveLostFocus()"
                                    class="btn btn-m btn-btnbackcolor popover-trigger" style="padding:5px;"
                                    data-toggle="popover" data-content="@ActionAS"
                                    data-html="true" data-placement="left">
                                <i class="la la-bars"></i>
                            </button>
                        }
                    </td>
                </tr>
                <tr>
                    <td class="text-center">2015</td>
                    <td>N/A</td>
                    <td>Equity</td>
                    <td>Government Equity</td>
                    <td class="text-center">3-01</td>
                    <td class="text-center">
                        @{
                            <button type="button" onfocusout="PopoveLostFocus()"
                                    class="btn btn-m btn-btnbackcolor popover-trigger" style="padding:5px;"
                                    data-toggle="popover" data-content="@ActionAS"
                                    data-html="true" data-placement="left">
                                <i class="la la-bars"></i>
                            </button>
                        }
                    </td>
                </tr>
                <tr>
                    <td class="text-center">2015</td>
                    <td>N/A</td>
                    <td>Income</td>
                    <td>Tax Revenue</td>
                    <td class="text-center">4-01</td>
                    <td class="text-center">
                        @{
                            <button type="button" onfocusout="PopoveLostFocus()"
                                    class="btn btn-m btn-btnbackcolor popover-trigger" style="padding:5px;"
                                    data-toggle="popover" data-content="@ActionAS"
                                    data-html="true" data-placement="left">
                                <i class="la la-bars"></i>
                            </button>
                        }
                    </td>
                </tr>
                <tr>
                    <td class="text-center">2015</td>
                    <td>Personal Services</td>
                    <td>Expenses</td>
                    <td>Personnel Services</td>
                    <td class="text-center">5-01</td>
                    <td class="text-center">
                        @{
                            <button type="button" onfocusout="PopoveLostFocus()"
                                    class="btn btn-m btn-btnbackcolor popover-trigger" style="padding:5px;"
                                    data-toggle="popover" data-content="@ActionAS"
                                    data-html="true" data-placement="left">
                                <i class="la la-bars"></i>
                            </button>
                        }
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

@*Get Revition Year Modal*@
<div class="modal fade text-left" id="ViewAddRevYearMajorModal" role="dialog">
    <div class="modal-dialog modal-md" role="document">
        <div class="modal-content">
            <div class="modal-header bg-active">
                <h4 class="modal-title"><strong>Add Revision Year</strong></h4>
                <button class="btn bg-active pull-right p-0 white" data-dismiss="modal"><i class="la la-close"></i></button>
            </div>
            <div class="modal-body skin skin-square">
                <div class="card-body p-0">
                    <div id="ViewAddRevYearMajorID"></div>
                </div>
            </div>
        </div>
    </div>
</div>
@*Get Alloment Class Modal*@
<div class="modal fade text-left" id="ViewAddAllomentMajorModal" role="dialog">
    <div class="modal-dialog modal-md" role="document">
        <div class="modal-content">
            <div class="modal-header bg-active">
                <h4 class="modal-title"><strong>Add Allotment Class</strong></h4>
                <button class="btn bg-active pull-right p-0 white" data-dismiss="modal"><i class="la la-close"></i></button>
            </div>
            <div class="modal-body skin skin-square">
                <div class="card-body p-0">
                    <div id="ViewAddAllomentMajorID"></div>
                </div>
            </div>
        </div>
    </div>
</div>
@*Get Account Group Modal*@
<div class="modal fade text-left" id="ViewAddAccntMajorModal" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-active">
                <h4 class="modal-title"><strong>Add Account Group</strong></h4>
                <button class="btn bg-active pull-right p-0 white" data-dismiss="modal"><i class="la la-close"></i></button>
            </div>
            <div class="modal-body skin skin-square">
                <div class="card-body p-0">
                    <div id="ViewAddAccntMajorID"></div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(function () {
        LoadDataTable();
    })
    //REVISION YEAR
    function GetAddAddRevYearMajor() {
        $.ajax({
            url: "/FileMaintenanceAccounts/GetAddAddRevYear",
            success: function (result) {
                $("#ViewAddRevYearMajorID").html(result);
                $('#ViewAddRevYearMajorModal').modal('toggle');
            }
        });
    }
    //Allotment Class
    function GetAddAddAllomentClassMajor() {
        $.ajax({
            url: "/FileMaintenanceAccounts/GetAddAllomentClass",
            success: function (result) {
                $("#ViewAddAllomentMajorID").html(result);
                $('#ViewAddAllomentMajorModal').modal('toggle');
            }
        });
    }
    //Account Group
    function GetAddAddAccntClassMajor() {
        $.ajax({
            url: "/FileMaintenanceAccounts/GetAddAccntGroup",
            success: function (result) {
                $("#ViewAddAccntMajorID").html(result);
                $('#ViewAddAccntMajorModal').modal('toggle');
            }
        });
    }
</script>