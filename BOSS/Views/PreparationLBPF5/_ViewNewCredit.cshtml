
<div class="row">
    <div class=" col-md-12 col-lg-12 col-sm-12">
        <div class="form-group row custom-form-margin">
            <label class="col-sm-4">Creditor:</label>
            <div class="col-sm-4">
                <select class="form-control">
                    <option>DBP</option>
                    <option>LBP</option>
                </select>
            </div>
            <div class="col-sm-4 px-0">
                <button type="button" class="btn btn-btnbackcolor">New</button>
                <button type="button" class="btn btn-btnbackcolor">Edit</button>
            </div>
        </div>
        <div class="form-group row custom-form-margin">
            <label class="col-sm-4">Purpose:</label>
            <div class="col-sm-8">
                <textarea class="form-control" id="basicTextarea" rows="2"></textarea>
            </div>
        </div>
        <div class="row custom-form-margin">
            <div class="form-group col-sm-4">
                <label>Address:</label>
            </div>
            <div class="col-md-8">
                <label><i>Don Manuel Banzon Avenue, City of Balanga, 2100 Bataan</i></label>
            </div>
        </div>
        <div class="form-group row custom-form-margin">
            <label class="col-sm-4">Date Contracted:</label>
            <div class="col-sm-7">
                <div class="input-group">
                    <div class="input-group-prepend">
                    </div>
                    <input type='text' class="form-control pickadate datepicker" value="01/01/2018" />
                </div>
            </div>
        </div>
        <div class="form-group row custom-form-margin">
            <label class="col-sm-4">Credit Term:</label>
            <div class="col-sm-2 pr-0 mr-0">
                <input type="text" class="form-control">
            </div>
            <label class="col-sm-2 m-0 p-0 text-center" style="margin-top:5px;">years or</label>
            <div class="col-sm-2 pl-0">
                <input type="text" class="form-control">
            </div>
            <label class="col-sm-1 mx-0 p-0" style="margin-top:5px;">months</label>
        </div>
        <div class="form-group row custom-form-margin">
            <label class="col-sm-4">Principal Amount:</label>
            <div class="col-sm-7">
                <input type="text" placeholder="0.00" class="form-control text-right" data-type='currency'>
            </div>
        </div>
    </div>
</div>

@*JS*@
<script>
    LoadDatePicker();

    $("input[data-type='currency']").on({
        keyup: function () {
            formatCurrency($(this));
        },
        blur: function () {
            formatCurrency($(this), "blur");
        }
    });

    formatCurrency();
    formatNumber();

</script>