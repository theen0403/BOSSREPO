
@{
    ViewBag.Title = "LBAFPhysical";
}

<script>
    $("#AccountabilityLBAFPhysicalID").addClass("active");
</script>

@*Header*@
<div class="content-header row">
    <div class=" content-header-left col-md-12 mb-0">
        <h3 class="content-header-title"><strong>Quarterly Physical</strong></h3>
    </div>
</div>
@*BODY*@
<div class="content-body">
    <div class="row">
        <div class="col-md-12">
            <div class="card box-shadow-3">
                <div class="card-content collapse show">
                    <div class="card-body rounded" style="border: 1px solid; border-color: #9BC69D;">
                        <div class="row mt-0">
                            <div class="col-md-1"></div>
                            <div class="col-md-2 col-sm-5 mt-0">
                                <div class="form-group ">
                                    <label>Budget Year</label>
                                    <select class="form-control">
                                        <option>2018</option>
                                        <option></option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-3 col-sm-5 mt-0">
                                <div class="form-group ">
                                    <label>Appropriation Source</label>
                                    <select class="form-control">
                                        <option>1st</option>
                                        <option></option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-5">
                                <div class="form-group ">
                                    <label>Department</label>
                                    <select class="form-control">
                                        <option>OFFICE of the PROVINCIAL ACCOUNTANT</option>
                                        <option></option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-5 mt-0"></div>
                            <div class="col-md-6">
                                <button type="button" class="btn btn-btnbackcolor btn-min-width  ml-0 pull-right"
                                        data-toggle="modal"
                                        data-target="#ViewPrintPreviewModal"
                                        onclick="OpenViewUpdatePrintPreviewModal()">
                                    View PPA
                                </button>
                            </div>
                        </div>

                        @*Target Output Table*@
                        <div class="card box-shadow-2 m-0 p-0">
                            <div class="card-header bg-active mt-1">
                                <h4 class="card-title black">Target Output</h4>
                                <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                                <div class="heading-elements">
                                    <ul class="list-inline mb-0">
                                        <li><a data-action="collapse"><i class="ft-plus black"></i></a></li>
                                    </ul>
                                </div>
                            </div>
                            <div class="card-content collapse">
                                <div class="card-body px-1 pt-1 card-body rounded" style="border: 1px solid; border-color: #9BC69D;">
                                    <div class="card-body m-0 p-0">
                                        <div class="row m-0">
                                            <div class="table-responsive">
                                                <div class="col-12 mb-0">

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        @*Actual Performance Table*@
                        <div class="card box-shadow-2 m-0 p-0">
                            <div class="card-header bg-active mt-1">
                                <h4 class="card-title black">Actual Performance</h4>
                                <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                                <div class="heading-elements">
                                    <ul class="list-inline mb-0">
                                        <li><a data-action="collapse"><i class="ft-plus black"></i></a></li>
                                    </ul>
                                </div>
                            </div>
                            <div class="card-content collapse">
                                <div class="card-body px-1 pt-1 card-body rounded" style="border: 1px solid; border-color: #9BC69D;">
                                    <div class="card-body m-0 p-0">
                                        <div class="row m-0">
                                            <div class="table-responsive">
                                                <div class="col-12 mb-0">

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row mt-1">
                            <div class="col">
                                <button type="button" class="btn btn-btnbackcolor btn-min-width ml-1 pull-right"
                                        data-toggle="modal"
                                        data-target="#ViewPrintPreviewModal"
                                        onclick="OpenViewUpdatePrintPreviewModal()">
                                    Print Preview
                                </button>
                                <button type="button" class="btn btn-btnbackcolor btn-min-width pull-right"
                                        data-toggle="modal"
                                        data-target="#ViewPrintPreviewModal"
                                        onclick="OpenViewUpdatePrintPreviewModal()">
                                    Save
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>