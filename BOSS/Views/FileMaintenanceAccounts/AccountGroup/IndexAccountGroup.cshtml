<div class="row mt-1">
    <div class="col-xl-1">
    </div>
    <div class="col-xl-2 col-lg-4 col-md-4">
        <div class="form-group">
            <label class="custom-form-margin">Revision Year</label>
            <span class="input-group-append">
                <select class="form-control">
                    <option>2015</option>
                    <option>2016</option>
                    <option>2017</option>
                    <option>2018</option>
                </select>
                <button type="button" class="btn btn-warning btn-sm m-left" data-toggle="modal" data-target="#ViewAddRevYearAccntGrpModal" onclick="GetAddAddRevYearAccntGrp()"><strong>+</strong></button>
            </span>
        </div>
    </div>
    <div class="col-xl-4 col-lg-8 col-md-8">
        <div class="form-group">
            <label class="custom-form-margin">Allotment Class</label>
            <span class="input-group-append">
                <select class="form-control">
                    <option>Personal Services</option>
                    <option>Capital Outlay</option>
                    <option>Maintenance and Other Operating Expenses</option>
                    <option>Other Operating Expenses</option>
                </select>
                <button type="button" class="btn btn-warning btn-sm m-left" data-toggle="modal" data-target="#ViewAddAllomentAccntGrpModal" onclick="GetAddAllomentClassAccntGrp()"><strong>+</strong></button>
            </span>
        </div>
    </div>
    <div class="col-xl-2 col-lg-6 col-md-6">
        <div class="form-group">
            <label class="custom-form-margin">Accounts</label>
            <input type="text" class="form-control" />
        </div>
    </div>
    <div class="col-xl-2 col-lg-6 col-md-6">
        <div class="form-group">
            <label class="custom-form-margin">Account Code</label>
            <input type="text" class="form-control" />
        </div>
    </div>
</div>
<div class="row mb-2">
    <div class="offset-xl-1 col-xl-10">
        <button type="button" class="btn btn-menuRed btn-min-width ml-1 float-right" onclick="GetRevisionCOADT()">
            Cancel
        </button>
        <button type="submit" class="btn btn-btnbackcolor btn-min-width float-right">
            Add
        </button>
    </div>
</div>

<div class="row">
    <div class="offset-xl-1 col-xl-10">
        <table class="table table-striped table-bordered table-condensed zero-configuration w-100 table-smss-hover">
            <thead class="text-center">
                <tr>
                    <th width="20%">Revision Year</th>
                    <th>Allotment Class</th>
                    <th>Accounts</th>
                    <th width="5%">Account Code</th>
                    <th width="5%">Action</th>
                </tr>
            </thead>
            <tbody>

                @{
                    var DeleteConfirmationMess = "Are you sure do you want to delete this?";
                    var DeleteSuccesMess = "Successfully Deleted";
                    var successUpdate = "Successfully Updated!";

                    var Update = "<div class=\"row m-small\"><button class=\"btn btn-icon black btn-menuorange form-control m-small my-0\" style=\"border-color: white \" type=\"button\" onclick=\"swalSuccess('" + successUpdate + "')\"> <i class='la la-edit'></i> Edit</button></div>";
                    var Remove = "<div class=\"row m-small\"><button class=\"btn btn-icon btn-menuRed white form-control m-small my-0\" style=\"border-color: white \" type=\"button\" onclick=\"swalConfirmation('" + @DeleteConfirmationMess + "', '', '" + @DeleteSuccesMess + "')\"><i class='la la-trash'></i> Delete</button></div>";

                    var ActionAS = Update + Remove;
                }
                <tr>
                    <td class="text-center">2015</td>
                    <td>Capital Outlay</td>
                    <td>Asset</td>
                    <td class="text-center">1</td>
                    <td class="text-center">
                        @{
                            <button type="button" onfocusout="PopoveLostFocus()"
                                    class="btn btn-m btn-btnbackcolor popover-trigger" style="padding:5px;"
                                    data-toggle="popover" data-content="@ActionAS"
                                    data-html="true" data-placement="left">
                                <i class="la la-bars"></i>
                            </button>
                        }
                    </td>
                </tr>
                <tr>
                    <td class="text-center">2015</td>
                    <td>N/A</td>
                    <td>Liabilities</td>
                    <td class="text-center">2</td>
                    <td class="text-center">
                        @{
                            <button type="button" onfocusout="PopoveLostFocus()"
                                    class="btn btn-m btn-btnbackcolor popover-trigger" style="padding:5px;"
                                    data-toggle="popover" data-content="@ActionAS"
                                    data-html="true" data-placement="left">
                                <i class="la la-bars"></i>
                            </button>
                        }
                    </td>
                </tr>
                <tr>
                    <td class="text-center">2015</td>
                    <td>N/A</td>
                    <td>Equity</td>
                    <td class="text-center">3</td>
                    <td class="text-center">
                        @{
                            <button type="button" onfocusout="PopoveLostFocus()"
                                    class="btn btn-m btn-btnbackcolor popover-trigger" style="padding:5px;"
                                    data-toggle="popover" data-content="@ActionAS"
                                    data-html="true" data-placement="left">
                                <i class="la la-bars"></i>
                            </button>
                        }
                    </td>
                </tr>
                <tr>
                    <td class="text-center">2015</td>
                    <td>N/A</td>
                    <td>Income</td>
                    <td class="text-center">4</td>
                    <td class="text-center">
                        @{
                            <button type="button" onfocusout="PopoveLostFocus()"
                                    class="btn btn-m btn-btnbackcolor popover-trigger" style="padding:5px;"
                                    data-toggle="popover" data-content="@ActionAS"
                                    data-html="true" data-placement="left">
                                <i class="la la-bars"></i>
                            </button>
                        }
                    </td>
                </tr>
                <tr>
                    <td class="text-center">2015</td>
                    <td>Personal Services</td>
                    <td>Expenses</td>
                    <td class="text-center">5</td>
                    <td class="text-center">
                        @{
                            <button type="button" onfocusout="PopoveLostFocus()"
                                    class="btn btn-m btn-btnbackcolor popover-trigger" style="padding:5px;"
                                    data-toggle="popover" data-content="@ActionAS"
                                    data-html="true" data-placement="left">
                                <i class="la la-bars"></i>
                            </button>
                        }
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

@*Get Revision Year Modal*@
<div class="modal fade text-left" id="ViewAddRevYearAccntGrpModal" role="dialog">
    <div class="modal-dialog modal-md" role="document">
        <div class="modal-content">
            <div class="modal-header bg-active">
                <h4 class="modal-title"><strong>Add Revision Year</strong></h4>
                <button class="btn bg-active pull-right p-0 white" data-dismiss="modal"><i class="la la-close"></i></button>
            </div>
            <div class="modal-body">
                <div class="card-body p-0" id="ViewAddRevYearAccntGrpID">

                </div>
            </div>
        </div>
    </div>
</div>

@*Get Alloment Class Modal*@ 
<div class="modal fade text-left" id="ViewAddAllomentAccntGrpModal" role="dialog">
    <div class="modal-dialog modal-md" role="document">
        <div class="modal-content">
            <div class="modal-header bg-active">
                <h4 class="modal-title"><strong>Add Allotment Class</strong></h4>
                <button class="btn bg-active pull-right p-0 white" data-dismiss="modal"><i class="la la-close"></i></button>
            </div>
            <div class="modal-body">
                <div class="card-body p-0" id="ViewAddAllomentID"></div>
            </div>
        </div>
    </div>
</div>
<script>
    $(function () {
        LoadDataTable();
    })
    //REVISION YEAR
    function GetAddAddRevYearAccntGrp() {
        $.ajax({
            url: "/FileMaintenanceAccounts/GetAddAddRevYear",
            success: function (result) {
                $("#ViewAddRevYearAccntGrpID").html(result);
                $('#ViewAddRevYearAccntGrpModal').modal('toggle');
            }
        });
    }
    //Allotment Class
    function GetAddAllomentClassAccntGrp() {
        $.ajax({
            url: "/FileMaintenanceAccounts/GetAddAllomentClass",
            success: function (result) {
                $("#ViewAddAllomentID").html(result);
                $('#ViewAddAllomentAccntGrpModal').modal('toggle');
            }
        });
    }
</script>