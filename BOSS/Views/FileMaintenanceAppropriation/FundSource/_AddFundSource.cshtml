@model BOSS.Models.FMmodels.FMAppropriarionSouceModels.FundSourceModel
@{
    BOSSEFConnectionString BOSSDB = new BOSSEFConnectionString();
}
@using BOSS.Models;
@using (Ajax.BeginForm("AddNewFundSource", "FileMaintenanceAppropriation", new AjaxOptions { OnSuccess = "GlobalAlertsCallingwoModal( 'GetFundSourceDT','Successfully Saved!')", OnFailure = "", }))
{
<div class="row">
    <div class="col-xl-2 col-lg-1 col-md-1"></div>
    <div class="col-xl-8 col-lg-10 col-md-10">
        <div class="row">
            <div class="col-xl-6 col-lg-6 col-md-6">
                <div class="form-group">
                    <label class="custom-form-margin">Appropriation Source Type</label>
                    @Html.DropDownListFor(m => m.AppropSourceTypeID, Model.AppropriationSourceTypeList, new { @class = "form-control select2nosearch", id = "AppropSourceTypeID" })
                </div>
            </div>
            <div class="col-xl-6 col-lg-6 col-md-6">
                <div class="form-group">
                    <label class="custom-form-margin">Fund Source</label>
                    @Html.TextBoxFor(m => m.getFundSourceColumns.FundSourceTitle, new { @class = "form-control", type = "text", id = "FundSourceTitle" })
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <button type="button" class="btn btn-menuRed btn-min-width float-right ml-1 " onclick="GetFundSourceDT()">
                        Cancel
                    </button>
                    <button type="submit" class="btn btn-btnbackcolor btn-min-width float-right">
                        Add
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
}
<script>
    $(function () {
        select2nosearch();
    })
</script>
