@model IEnumerable<BOSS.Models.FMmodels.FMAppropriarionSouceModels.FundSourceList>
@{
    BOSSEFConnectionString BOSSDB = new BOSSEFConnectionString();
}
@using BOSS.Models;
<div class="row">
    <div class="col-xl-2 col-lg-1 col-md-1"></div>
    <div class="col-xl-8 col-lg-10 col-md-10">
        <table class="table table-striped table-bordered table-condensed zero-configuration w-100 table-smss-hover">
            <thead class="text-center">
                <tr>
                    <th>Appropriation Source Type</th>
                    <th>Fund Source</th>
                    <th width="5%" class="text-center">Action</th>

                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var Items in Model)
                    {
                        var Update = "<button class='btn btn-icon black btn-menuorange btn-block border-0' id='btnEditFundSourceID' FundSourceAttr='" + Items.FundSourceID + "'><i class='ft-edit'></i> Edit</button>";
                        var Remove = "<button class='btn btn-icon btn-menuRed white btn-block border-0' id='btnDeleteFundSourceID' FundSourceAttr='" + Items.FundSourceID + "'><i class='la la-trash'></i> Delete</button>";

                        var ActionAS = Update + Remove;

                        <tr>
                            <td>@Items.AppropSourceTypeTitle</td>
                            <td>@Items.FundSourceTitle</td>
                            <td class="text-center">
                                <button type="button" onfocusout="PopoveLostFocus()"
                                        class="btn btn-m btn-btnbackcolor popover-trigger" style="padding:5px;"
                                        data-toggle="popover" data-content="@ActionAS"
                                        data-html="true" data-placement="left">
                                    <i class="la la-bars"></i>
                                </button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
<script>
    $(function () {
        LoadDataTable();
    })
</script>