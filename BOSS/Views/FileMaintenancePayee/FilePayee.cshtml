
@{
    ViewBag.Title = "FilePayee";
}
<script>
    $("#FileMaintenancePayeeID").addClass("active");
</script>

<div class="content-header row">
    <div class=" content-header-left col-md-12 mb-0">
        <h3 class="content-header-title"><strong>Payee</strong></h3>
    </div>
</div>
<div class="content-body" id="FMPayeeController" ng-controller="FMPayeeController" ng-init="">
    <div class="row">
        <div class="content-header-left col-md-12">
            <div class="card box-shadow-4">
                <div class="card-content collapse show">
                    <div class="card-body rounded" style="border: 1px solid; border-color: #9BC69D;">

                        <div class="row">
                            <div class="col-md-4 col-sm-4">
                                <div class="form-group">
                                    <label class="custom-form-margin">Name</label>
                                    <input type="text" id="Office TypeID" value="" class="form-control" />
                                </div>
                            </div>
                            <div class="col-md-4 col-sm-4">
                                <div class="form-group">
                                    <label class="custom-form-margin">Address</label>
                                    <input type="text" id="Office TypeCodeID" value="" class="form-control" />
                                </div>
                            </div>
                            <div class="col-md-4 col-sm-4">
                                <div class="form-group">
                                    <label class="custom-form-margin">Department</label>
                                    <span class="input-group-append">
                                        <select class="form-control">
                                            <option>OFFICE of the LOCAL ACCOUNTANT</option>
                                            <option>OFFICE of the LOCAL ADJUDICATOR</option>
                                            <option>OFFICE of the LOCAL ADMINISTRATOR</option>
                                            <option>OFFICE of the LOCAL AGRICULTURIST</option>
                                            <option>HOSPITAL</option>
                                        </select>
                                        <button type="button" class="btn btn-warning btn-sm m-left" data-toggle="modal" onclick="AngularGlobalFunctions('FMPayeeController','GetAddDeptModal','')"><strong>+</strong></button>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-2">
                            <div class="col">
                                <div class="form-group">
                                    <button type="button" class="btn btn-menuRed btn-min-width float-right" onclick="GetDepartmentDT()">
                                        Cancel
                                    </button>
                                    <button type="submit" class="btn btn-btnbackcolor btn-min-width mr-1 float-right">
                                        Add
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <table class="table table-striped table-bordered table-condensed zero-configuration w-100 table-smss-hover">
                                    <thead class="text-center">
                                        <tr>
                                            <th>Name</th>
                                            <th>Address</th>
                                            <th>Department</th>
                                            <th width="5%">Action</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            var DeleteConfirmationMess = "Are you sure do you want to delete this?";
                                            var DeleteSuccesMess = "Successfully Deleted";
                                            var successUpdate = "Successfully Updated!";

                                            var Update = "<div class=\"row m-small\"><button class=\"btn btn-icon black btn-menuorange form-control m-small my-0\" style=\"border-color: white \" type=\"button\" onclick=\"swalSuccess('" + successUpdate + "')\"> <i class='la la-edit'></i> Edit</button></div>";
                                            var Remove = "<div class=\"row m-small\"><button class=\"btn btn-icon btn-menuRed white form-control m-small my-0\" style=\"border-color: white \" type=\"button\" onclick=\"swalConfirmation('" + @DeleteConfirmationMess + "', '', '" + @DeleteSuccesMess + "')\"><i class='la la-trash'></i> Delete</button></div>";

                                            var ActionAS = Update + Remove;

                                            <tr>
                                                <td>Juan S. Dela Cruz</td>
                                                <td>Brgy. San Antonio, Pasig City</td>
                                                <td>OFFICE of the LOCAL ACCOUNTANT</td>
                                                <td class="text-center">
                                                    <button type="button" onfocusout="PopoveLostFocus()"
                                                            class="btn btn-m btn-btnbackcolor popover-trigger"
                                                            data-toggle="popover" data-content="@ActionAS"
                                                            data-original-title="" data-html="true" data-placement="left">
                                                        <i class="la la-bars"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>Abegail M. Santos</td>
                                                <td>Concepcion I, Marikina City</td>
                                                <td>OFFICE of the LOCAL ADJUDICATOR</td>
                                                <td class="text-center">
                                                    <button type="button" onfocusout="PopoveLostFocus()"
                                                            class="btn btn-m btn-btnbackcolor popover-trigger"
                                                            data-toggle="popover" data-content="@ActionAS"
                                                            data-original-title="" data-html="true" data-placement="left">
                                                        <i class="la la-bars"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>Nicole N. Motos</td>
                                                <td>Brgy. Holy Spirit, Quezon City</td>
                                                <td>OFFICE of the LOCAL ADMINISTRATOR</td>
                                                <td class="text-center">
                                                    <button type="button" onfocusout="PopoveLostFocus()"
                                                            class="btn btn-m btn-btnbackcolor popover-trigger"
                                                            data-toggle="popover" data-content="@ActionAS"
                                                            data-original-title="" data-html="true" data-placement="left">
                                                        <i class="la la-bars"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>Janina P. Perez</td>
                                                <td>Brgy. Dela Paz, Pasig City</td>
                                                <td>OFFICE of the LOCAL AGRICULTURIST</td>
                                                <td class="text-center">
                                                    <button type="button" onfocusout="PopoveLostFocus()"
                                                            class="btn btn-m btn-btnbackcolor popover-trigger"
                                                            data-toggle="popover" data-content="@ActionAS"
                                                            data-original-title="" data-html="true" data-placement="left">
                                                        <i class="la la-bars"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    @*Add Dept Modal*@
    <div class="modal fade text-left" id="ViewAddDeptFuncModal" role="dialog">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header bg-active">
                    <h4 class="modal-title"><strong>Add Department</strong></h4>
                    <button class="btn bg-active pull-right p-0 white" data-dismiss="modal"><i class="la la-close"></i></button>
                </div>
                <div class="modal-body skin skin-square">
                    <div class="card-body p-0">
                        <div id="ViewAddDeptFuncID"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    app.controller('FMPayeeController', function ($scope, $http, $sce) {
        var F = $scope, P = $http, D = $sce.trustAsHtml;
        
        //Get Add Department Modal
        F.GetAddDeptModal = function () {
            P({
                url: '/FileMaintenancePayee/GetAddDeptModal',
            }).then(function (response) {
                $('#ViewAddDeptFuncID').html(response.data);
                $('#ViewAddDeptFuncModal').modal('toggle');
            });
        }
    });
</script>
