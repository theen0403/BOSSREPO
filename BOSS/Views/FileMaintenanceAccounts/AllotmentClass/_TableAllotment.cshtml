@model IEnumerable<BOSS.Models.FMmodels.FMAccountsModels.AllotmentClassList>
@{
    BOSSEFConnectionString BOSSDB = new BOSSEFConnectionString();
}
@using BOSS.Models;
<div class="row">
    <div class="col-xl-2 col-lg-1 col-md-1"></div>
    <div class="col-xl-8 col-lg-10 col-md-10">
        <table class="table table-striped table-bordered table-condensed zero-configuration w-100 table-smss-hover">
            <thead class="text-center">
                <tr>
                    <th class="codeTh">Revision Year</th>
                    <th>Allotment Class</th>
                    <th class="actionTh">Action</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var Items in Model)
                    {
                        <tr>
                            <td class="text-center">@Items.RevYear</td>
                            <td>@Items.AllotmentClassTitle</td>
                            <td class="text-center">
                                @{
                                var btnEdit = "<button class='btn btn-icon black btn-menuorange btn-block border-0' id='btnEditAllotID' AllotAttr='" + Items.AllotmentClassID + "'><i class='ft-edit'></i> Edit</button>";
                                var btnDelete = "<button class='btn btn-icon btn-menuRed white btn-block border-0' id='btnDeleteAllotID' AllotAttr='" + Items.AllotmentClassID + "'><i class='la la-trash'></i> Delete</button>";
                                var btnQty = btnEdit + btnDelete;

                                <button type="button" onfocusout="PopoveLostFocus()"
                                        class="btn btn-m btn-btnbackcolor popover-trigger" data-placement="left"
                                        data-toggle="popover" data-content="@btnQty">
                                    <i class="la la-bars"></i>
                                </button>
                                }
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
<script>
    $(function () {
        LoadDataTable();
    })
</script>


