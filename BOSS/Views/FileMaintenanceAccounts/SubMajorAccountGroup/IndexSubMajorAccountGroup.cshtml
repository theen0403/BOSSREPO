<div class="row">
    <div class="col-1"></div>
    <div class="col-10">
        <div class="row">
            <div class="col-xl-3 col-lg-3 col-md-3">
                <label class="mt-1"><b>Revision Year</b></label>
                <span class="input-group-append">
                    <select class="form-control">
                        <option>2015</option>
                        <option>2016</option>
                        <option>2017</option>
                        <option>2018</option>
                    </select>
                    <button type="button" class="btn btn-warning btn-sm m-left" data-toggle="modal" data-target="#ViewAddRevYearAllotModal" onclick="GetAddAddRevYearAllot()"><strong>+</strong></button>
                </span>
            </div>
            <div class="col-xl-6 col-lg-6 col-md-6">
                <label class="mt-1"><b>Allotment Class</b></label>
                <span class="input-group-append">
                    <select class="form-control">
                        <option>Personal Services</option>
                        <option>Capital Outlay</option>
                        <option>Maintenance and Other Operating Expenses</option>
                        <option>Other Operating Expenses</option>
                    </select>
                    <button type="button" class="btn btn-warning btn-sm m-left" data-toggle="modal" data-target="#ViewAddAllomentModal" onclick="GetAddAddAllomentClassAllot()"><strong>+</strong></button>
                </span>
            </div>
            <div class="col-xl-3 col-lg-3 col-md-3">
                <label class="mt-1"><b>Accounts</b></label>
                <span class="input-group-append">
                    <select class="form-control">
                        <option>Asset</option>
                        <option>Liabilities</option>
                        <option>Equity</option>
                        <option>Income</option>
                        <option>Expenses</option>
                    </select>
                    <button type="button" class="btn btn-warning btn-sm m-left" data-toggle="modal" data-target="#ViewAddAccntModal" onclick="GetAddAddAccntClass()"><strong>+</strong></button>
                </span>
            </div>
        </div>
        <div class="row black">
            <div class="col-xl-4 col-lg-4 col-md-6">
                <label class="mt-1"><b>Major Account Group</b></label>
                <select class="form-control">
                    <option>Cash</option>
                    <option>Financial Liabilities</option>
                    <option>Government Equity</option>
                    <option>Tax Revenue</option>
                    <option>Personnel Services</option>
                </select>
            </div>
            <div class="col-xl-4 col-lg-5 col-md-6">
                <label class="mt-1"><b>Sub Major Account Group</b></label>
                <input type="text" class="form-control" name="name" value="" />
            </div>
            <div class="col-xl-4 col-lg-3 col-md-5 mt-1">
                <label><b>Account Code</b></label>
                <div class="input-group mt-0">
                    <span class="input-group-addon" id="basic-addon1"><b>1 - 01 -</b></span>
                    <input type="text" class="form-control" name="name" value="" />
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row mt-1">
    <div class="offset-md-1 col-md-10">
        <button type="button" class="btn btn-menuRed btn-min-width mr-1 float-right" onclick="GetRevisionCOADT()">
            Cancel
        </button>
        <button type="submit" class="btn btn-btnbackcolor btn-min-width mr-1 float-right">
            Add
        </button>
    </div>
</div>
