
@{
    ViewBag.Title = "ReportSAOOGraph";
}

<script>
    $("#ExecutionReportSAOOGraphID").addClass("active");
</script>

@*Header*@
<div class="content-header row">
    <div class=" content-header-left col-md-12 mb-0">
        <h3 class="content-header-title"><strong>Report - Status of Appropriations, Allotments and Obligations</strong></h3>
    </div>
</div>
@*BODY*@
<div class="content-body">
    <div class="row">
        <div class="content-header-left col-md-12">
            <div class="card box-shadow-3">
                <div class="card-content collapse show">
                    <div class="card-body rounded" style="border: 1px solid; border-color: #9BC69D;">
                        <div class="row">
                            <div class="col-md-2"></div>
                            <div class="col-md-2 col-sm-4 form-group">
                                <label>Budget Year</label>
                                <select class="form-control">
                                    <option>2018</option>
                                </select>
                            </div>
                            <div class="col-md-3 col-sm-8 form-group">
                                <label>Fund</label>
                                <select class="form-control">
                                    <option>General Fund</option>
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-2"></div>
                            <div class="col-md-2 col-sm-4 form-group">
                                <label>Quarter Ending</label>
                                <select class="form-control">
                                    <option>As of</option>
                                </select>
                            </div>
                            <div class="col-md-3 col-sm-4 form-group">
                                <label>Date To</label>
                                <div class="form-group">
                                    <input type="date" data-format="dd/MM/yyyy" value="15/01/2018" class="form-control pickadate">
                                </div>
                            </div>
                            <div class="col-md-3 col-sm-4 form-group">
                                <label>Date From</label>
                                <div class="form-group">
                                    <input type="date" data-format="dd/MM/yyyy" value="15/01/2018" class="form-control pickadate">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-8  col-sm-8"></div>
                            <div class="col-md-2  col-sm-4">
                                <button class="btn btn-btnbackcolor form-control btn-min-width">Preview</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>