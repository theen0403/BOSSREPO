@model IEnumerable<BOSS.Models.FMmodels.FMPayeeModels.PayeeList>
@{
    BOSSEFConnectionString BOSSDB = new BOSSEFConnectionString();
}
@using BOSS.Models;
<div class="row">
    <div class="col">
        <table class="table table-striped table-bordered table-condensed zero-configuration w-100 table-smss-hover">
            <thead class="text-center">
                <tr>
                    <th>Name</th>
                    <th>Address</th>
                    <th>Department</th>
                    <th width="5%">Action</th>

                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var Items in Model)
                    {

                        var DeleteConfirmationMess = "Are you sure do you want to delete this?";
                        var DeleteSuccesMess = "Successfully Deleted";

                        var Update = "<button class=\"btn btn-icon btn-block black btn-menuorange\" type=\"button\" onclick =\"AngularGlobalEdit('FMPayeeController','Get_UpdatePayee','" + @Items.PayeeID + "')\"> <i class='la la-edit'></i> Edit</button>";
                        var Remove = "<button class=\"btn btn-icon btn-block btn-menuRed\" type=\"button\" onclick =\"swalConfirmation('" + @DeleteConfirmationMess + "', '" + @Items.Name + "','" + @DeleteSuccesMess + "','AngularGlobalDelete(" + @Items.PayeeID + ",&quot;DeletePayee&quot;,&quot;FMPayeeController&quot;)')\"><i class='la la-trash'></i> Delete</button>";
                        var Action = Update + Remove;

                <tr>
                    <td>@Items.Name</td>
                    <td>@Items.Address</td>
                    <td>@Items.DeptTitle</td>
                    <td class="text-center">
                        <button type="button" onfocusout="PopoveLostFocus()"
                                class="btn btn-m btn-btnbackcolor popover-trigger"
                                data-toggle="popover" data-content="@Action" data-html="true" data-placement="left">
                            <i class="la la-bars"></i>
                        </button>
                    </td>
                </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    $(function () {
        LoadDataTable();
    })
</script>