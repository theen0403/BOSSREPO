
@{
    ViewBag.Title = "FileSignatory";
}

<script>
    $("#FileMaintenanceSignatoryID").addClass("active");
</script>

@*Header*@
<div class="content-header row">
    <div class=" content-header-left col-md-12 mb-0">
        <h3 class="content-header-title"><strong>Signatory</strong></h3>
    </div>
</div>
@*BODY*@
<div class="content-body" id="FMSignatoryController" ng-controller="FMSignatoryController" ng-init="InitFunctions();">
    <div class="row">
        <div class="col-md-12">
            <div class="card box-shadow-3">
                <div class="card-content collapse show">
                    <div class="card-body rounded" style="border: 1px solid; border-color: #9BC69D;">
                        <div class="mt-1" id="SignatoryTempID">

                        </div>
                        <div class="mt-2" ng-bind-html="FMSignatoryID">

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @*Add Dept Modal*@
    <div class="modal fade text-left" id="ViewAddDeptFuncModal" role="dialog">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header bg-active">
                    <h4 class="modal-title"><strong>Add Department</strong></h4>
                    <button class="btn bg-active pull-right p-0 white" data-dismiss="modal"><i class="la la-close"></i></button>
                </div>

                <div class="modal-body">
                    <div id="ViewAddDeptFuncID"></div>
                </div>
            </div>
        </div>
    </div>
    @*Add Function Modal*@
    <div class="modal fade text-left" id="ViewAddFuncSecModal" role="dialog">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header bg-active">
                    <h4 class="modal-title"><strong>Add Function</strong></h4>
                    <button class="btn bg-active pull-right p-0 white" data-dismiss="modal"><i class="la la-close"></i></button>
                </div>

                <div class="modal-body skin skin-square">
                    <div class="card-body p-0">
                        <div id="ViewAddFuncSecID"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @*Add Position Modal*@
    <div class="modal fade text-left" id="ViewAddPositionModal" role="dialog">
        <div class="modal-dialog modal-md" role="document">
            <div class="modal-content">
                <div class="modal-header bg-active">
                    <h4 class="modal-title"><strong>Add Position</strong></h4>
                    <button class="btn bg-active pull-right p-0 white" data-dismiss="modal"><i class="la la-close"></i></button>
                </div>

                <div class="modal-body skin skin-square">
                    <div class="card-body p-0">
                        <div id="ViewAddPositionID"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    app.controller('FMSignatoryController', function ($scope, $http, $sce) {
        var F = $scope, P = $http, D = $sce.trustAsHtml;
        //Get Signatory Datatable Partial View
        F.InitFunctions = function () {
            F.GetSignatoryDTable();
        }//Get Table Appropriation Source Datatable Partial View
        F.GetSignatoryDTable = function () {
            F.FMSignatoryID = null;
            P({
                url: '/FileMaintenanceSignatory/GetSignatoryDTable',
            }).then(function (response) {
                F.FMSignatoryID = D(response.data);
                F.GetAddSignatory();
            });
        }
        F.GetAddSignatory = function () {
            P({
                url: '/FileMaintenanceSignatory/GetAddSignatory',
            }).then(function (response) {
                $('#SignatoryTempID').html(response.data);

            });
        }
        F.GetAddDynamicFunction = function () {
            var DeptID = $("#DeptID").val();
            P({
                url: '/FileMaintenanceSignatory/GetAddDynamicFunction',
                params: { DeptID: DeptID }
            }).then(function (response) {
                $('#functionlistID').html(response.data);

            });
        }
        F.GetUpdateDynamicFunction = function () {
            var DeptID = $("#DeptID").val();
            var FunctionID = $("#funcTempIDID").val();
            P({
                url: '/FileMaintenanceSignatory/GetUpdateDynamicFunction',
                params: { DeptID: DeptID, FunctionID: FunctionID }
            }).then(function (response) {
                $('#functionlistID').html(response.data);

            });
        }
        F.Get_UpdateSignatory = function (SignatoryID) {
            P({
                url: '/FileMaintenanceSignatory/Get_UpdateSignatory',
                params: { SignatoryID: SignatoryID }
            }).then(function (response) {
                $('#SignatoryTempID').html(response.data);

            });
        }
        F.DeleteSignatory = function (SignatoryID) {
            P({
                url: '/FileMaintenanceSignatory/DeleteSignatory',
                params: { SignatoryID: SignatoryID }
            }).then(function (response) {
                F.GetSignatoryDTable();
            });
        }
        //Get Add Department Modal
        F.GetAddDeptModal = function () {
            P({
                url: '/FileMaintenanceSignatory/GetAddDeptModal',
            }).then(function (response) {
                $('#ViewAddDeptFuncID').html(response.data);
                $('#ViewAddDeptFuncModal').modal('toggle');
            });
        }
        //Get Function Modal
        F.GetAddFuncModal = function () {
            P({
                url: '/FileMaintenanceSignatory/GetAddFuncModal',
            }).then(function (response) {
                $('#ViewAddFuncSecID').html(response.data);
                $('#ViewAddFuncSecModal').modal('toggle');
            });
        }
        //Get Position Modal
        F.GetAddPositionModal = function () {
            P({
                url: '/FileMaintenanceSignatory/GetAddPositionModal',
            }).then(function (response) {
                $('#ViewAddPositionID').html(response.data);
                $('#ViewAddPositionModal').modal('toggle');
            });
        }
    });
</script>