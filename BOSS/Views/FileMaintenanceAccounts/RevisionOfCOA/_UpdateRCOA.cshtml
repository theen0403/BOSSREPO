@model BOSS.Models.FMAccounts.RevisionOfCOAModel
@{
    BOSSEFConnectionString BOSSDB = new BOSSEFConnectionString();
}
@using BOSS.Models;

@using (Ajax.BeginForm("UpdateRevCOA", "FileMaintenanceAccounts", new AjaxOptions { OnSuccess = "GlobalAlertsCallingwoModal('GetRevisionCOADT','Successfully Added!')", OnFailure = "", }))
{
    @Html.HiddenFor(m => m.RevID, new { })
    <div class="row">
        <div class="col-md-1">
        </div>
        <div class="col-md-10">
            <div class="row">
                <div class="col-md-2 col-sm-4">
                    <div class="form-group ">
                        <label style="margin-bottom:2px;">Revision Year</label>
                        @Html.TextBoxFor(m => m.getRevCOAColumns2.RevYEar, new { @class = "form-control", type = "text", id = "RevYEar" })
                    </div>
                </div>
                @Html.TextBoxFor(m => m.isUsed, new { id = "isUsedID", @class = "hidden" })
                <div class="col-md-2">
                    <div class="form-group">
                        <label style="margin-bottom:2px;">Is Used?</label>
                        <select class="form-control" id="isUsedIDD" onchange="isUsedOnChange()">
                            <option value=True>Yes</option>
                            <option value=False>No</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label style="margin-bottom:2px;">Remarks</label>
                        @Html.TextBoxFor(m => m.getRevCOAColumns2.Remarks, new { @class = "form-control", type = "text", id = "Remarks" })
                    </div>
                </div>

                <div class="col-md-2 mt-2">
                    <button type="submit" class="btn btn-btnbackcolor btn-min-width">
                        Update
                    </button>
                </div>
                <div class="col-md-2 mt-2">
                    <button type="button" class="btn btn-menuRed btn-min-width" onclick="GetRevisionCOADT()">
                        Cancel
                    </button>
                </div>
            </div>
        </div>
    </div>
}
<script>
    $(function () {
        $("#isUsedIDD").val($("#isUsedID").val());
    })
    function isUsedOnChange() {
        $("#isUsedID").val($("#isUsedIDD").val());
    }
</script>