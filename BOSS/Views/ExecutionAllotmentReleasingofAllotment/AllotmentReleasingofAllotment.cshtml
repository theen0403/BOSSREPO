
@{
    ViewBag.Title = "AllotmentReleasingofAllotment";
}
<script>
    $("#ExecutionAllotmentReleasingofAllotmentID").addClass("active");
</script>

@*Header*@
<div class="content-header row">
    <div class=" content-header-left col-md-12 mb-0">
        <h3 class="content-header-title"><strong>Releasing of Allotment</strong></h3>
    </div>
</div>
@*BODY*@
