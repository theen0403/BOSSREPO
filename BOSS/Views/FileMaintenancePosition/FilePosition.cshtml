            }
        })
    }
    function GetAddDynamicClassification() {
        var PSID = $("#PSID").val();
        $.ajax({
            url: '/FileMaintenancePosition/GetAddDynamicClassification',
            data: { PSID: PSID },
            success: function (result) {
                $("#PositionClassificationID").html(result);
            }
        })
    }
    function GetUpdateDynamicClassification() {
        var PSID = $("#PSID").val();
        var PCID = $("#PCIDTempID").val();
       
        $.ajax({
            url: '/FileMaintenancePosition/GetUpdateDynamicClassification',
            data: { PSID: PSID, PCID: PCID },
            success: function (result) {
                $("#PositionClassificationID").html(result);
            }
        })
    }
    function Get_UpdatePosition(PositionID) {
        $.ajax({
            url: '/FileMaintenancePosition/Get_UpdatePosition',
            data: { PositionID: PositionID },
            success: function (result) {
                $("#PositionSPTempID").html(result);
            }
        })
    }
    function DeletePosition(PositionID) {
        $.ajax({
            url: '/FileMaintenancePosition/DeletePosition',
            data: { PositionID: PositionID },
            success: function (result) {
                GetPositionSPDTable();
            }
        })
    }
