@model IEnumerable<BOSS.Models.FMAccounts.RevisionCOAList>
@{
    BOSSEFConnectionString BOSSDB = new BOSSEFConnectionString();
}
@using BOSS.Models;

<div class="row mt-2">
    <div class="offset-md-1 col-md-10">
        <table class="table table-striped table-bordered table-condensed zero-configuration w-100 table-smss-hover">
            <thead class="text-center">
                <tr>
                    <th width="20%">Revision Year</th>
                    <th width="20%">Is Used</th>
                    <th>Remarks</th>
                    <th width="5%">Action</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var Items in Model)
                    {
                        var DeleteConfirmationMess = "Are you sure do you want to delete this?";
                        var DeleteSuccesMess = "Successfully Deleted";

                        var UpdateRevision = "<button class=\"btn btn-icon btn-block black btn-menuorange\" type=\"button\" onclick=\"GlobalEdit('Get_UpdateRevCOA','" + @Items.RevID + "')\"> <i class='la la-edit'></i> Edit</button>";
                        var RemoveRevision = "<button class=\"btn btn-icon btn-block btn-menuRed\" type=\"button\" onclick =\"swalConfirmation('" + @DeleteConfirmationMess + "', '" + @Items.RevYEar + "','" + @DeleteSuccesMess + "','GlobalDelete(" + @Items.RevID + ",&quot;DeleteRCOA&quot;)')\"><i class='la la-trash'></i> Delete</button>";

                        var ActionRevision = UpdateRevision + RemoveRevision;

                        <tr class="text-center">
                            <td>@Items.RevYEar</td>
                            <td>
                                @{
                                    var isUsedValue = "Yes";
                                    if (Items.isUsed != 1)
                                    {
                                        isUsedValue = "No";
                                    }
                                }
                                @isUsedValue
                            </td>

                            <td>@Items.Remarks</td>
                            <td class="text-center">
                                <button type="button" onfocusout="PopoveLostFocus()"
                                        class="btn btn-m btn-btnbackcolor popover-trigger" data-placement="left"
                                        data-toggle="popover" data-content="@ActionRevision">
                                    <i class="la la-bars"></i>
                                </button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    $(function () {
        LoadDataTable();
    })
</script>


