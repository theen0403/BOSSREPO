@model IEnumerable<BOSS.Models.FMmodels.FMSectorModels.SubSectorList>
@{
    BOSSEFConnectionString BOSSDB = new BOSSEFConnectionString();
}
@using BOSS.Models;

<div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10">
        <table class="table table-striped table-bordered table-condensed zero-configuration w-100 table-smss-hover">
            <thead class="text-center">
                <tr>
                    <th>Sector</th>
                    <th>Sub Sector</th>
                    <th width="15%">Code</th>
                    <th width="5%" class="text-center">Action</th>

                </tr>
            </thead>
            <tbody>
                @{

                    foreach (var Items in Model)
                    {
                        var DeleteConfirmationMess = "Are you sure do you want to delete this?";
                        var DeleteSuccesMess = "Successfully Deleted";

                        var Update = "<button class=\"btn btn-icon btn-block black btn-menuorange\" type=\"button\" onclick=\"GlobalEdit('Get_UpdateSubSector','" + @Items.SubSectorID + "')\"> <i class='la la-edit'></i> Edit</button>";
                        var Remove = "<button class=\"btn btn-icon btn-block btn-menuRed\" type=\"button\" onclick =\"swalConfirmation('" + @DeleteConfirmationMess + "', '" + @Items.SectorTitle + "','" + @DeleteSuccesMess + "','GlobalDelete(" + @Items.SubSectorID + ",&quot;DeleteSubSector&quot;)')\"><i class='la la-trash'></i> Delete</button>";
                        var Action = Update + Remove;

                        <tr>
                            <td>@Items.SectorTitle</td>
                            <td>@Items.SubSectorTitle</td>
                            <td class="text-center">@Items.SubSectorCode</td>
                            <td class="text-center">
                                <button type="button" onfocusout="PopoveLostFocus()"
                                        class="btn btn-m btn-btnbackcolor popover-trigger"
                                        data-toggle="popover" data-content="@Action" data-html="true" data-placement="left">
                                    <i class="la la-bars"></i>
                                </button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
<script>
    $(function () {
        LoadDataTable();
    })
</script>