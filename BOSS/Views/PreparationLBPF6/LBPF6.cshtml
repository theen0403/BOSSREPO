
@{
    ViewBag.Title = "LBPF6";
}


<script>
    $("#PreparationLBPF6ViewID").addClass("active");
</script>

@*Header*@
<div class="content-header row">
    <div class="content-header-left col-md-12 col-12 mb-12">
        <h3 class="content-header-title"><strong>LBPF 6 - Statement of Statutory and Contractual Obligation and Budgetary Requirements</strong></h3>
    </div>
</div>

@*BODY*@
<div class="content-body" id="LBPForm6Controller" ng-controller="LBPForm6Controller" ng-init="">
    <div class="content-body">
        <div class="row">
            <div class="content-header-left col-md-12">
                <div class="card box-shadow-2">
                    <div class="card-content collapse show">
                        <div class="card-body rounded" style="border: 1px solid; border-color: #9BC69D;">
                            <div class="row">
                                <div class="col-md-2"></div>
                                <div class="col-md-2 col-sm-3">
                                    <div class="form-group">
                                        <label>Budget Year</label>
                                        <select class="form-control">
                                            <option>2017</option>
                                            <option>2018</option>
                                            <option>2019</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-4 col-sm-6">
                                    <div class="form-group">
                                        <label>Fund</label>
                                        <select class="form-control">
                                            <option>Calamity Fund</option>
                                            <option>20% Development Fund</option>
                                            <option>General Fund</option>
                                            <option>Local Development Fund</option>
                                            <option>Special Account</option>
                                            <option>Special Education Fund</option>
                                            <option>Trust Fund</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-2 col-sm-3 mt-1 pt-1">
                                    <a class="btn btn-btnbackcolor btn-min-width button"
                                       data-caption="01/01/19" href="~/Resources/PDF/blank.pdf"
                                       target='_blank' onclick="CloseModal()">
                                        Print Preview
                                    </a>
                                </div>
                            </div>
                            <div class="card-header bg-active mt-1 rounded">
                                <h4 class="card-title black">Statutory and Contractual Obligations</h4>
                            </div>
                            <div class="card-body pt-1  rounded box-shadow-3">
                                <div class="col-md-3 col-sm-3 mx-0 px-0">
                                    <button type="button" class="btn btn-btnbackcolor btn-min-width mb-1"
                                            onclick="AngularGlobalView('LBPForm6Controller','GetViewAddStatutory','  1 ')">
                                        Add
                                    </button>
                                </div>
                                <div class="row">
                                    <div class="table-responsive mx-1">
                                        <table class="table table-striped zero-configuration table-bordered">
                                            <thead>
                                                <tr class="text-center">
                                                    <th width="70%">Description</th>
                                                    <th>Total Amount</th>
                                                    <th width="5%">Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @{

                                                    var Edit = "<button class=\"btn btn-icon btn-block black btn-menuorange\" type=\"button\" onclick=\"AngularGlobalView('AIPController','GetViewActivityDetails','" + 1 + "')\"> <i class='la la-edit'></i> Edit</button>";
                                                    var Delete = "<button class=\"btn btn-icon btn-block btn-menuRed  border-0\" type=\"button\"> <i class='la la-trash'></i> Delete</button></div>";

                                                    var Action = Edit + Delete;
                                                    <tr>
                                                        <td>Terminal Leave Benefits</td>
                                                        <td class="text-right">11,952,000.00</td>
                                                        <td class="text-center">
                                                            <button type="button" onfocusout="PopoveLostFocus()"
                                                                    class="btn btn-btnbackcolor popover-trigger" style="padding:5px;"
                                                                    data-toggle="popover" data-content="@Action"
                                                                    data-original-title="" data-html="true" data-placement="left">
                                                                <i class="la la-bars"></i>
                                                            </button>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>Debt Services</td>
                                                        <td class="text-right">127,646,326.02</td>
                                                        <td class="text-center">
                                                            <button type="button" onfocusout="PopoveLostFocus()"
                                                                    class="btn btn-btnbackcolor popover-trigger" style="padding:5px;"
                                                                    data-toggle="popover" data-content="@Action"
                                                                    data-original-title="" data-html="true" data-placement="left">
                                                                <i class="la la-bars"></i>
                                                            </button>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>Employees Compensation Insurance Premiums</td>
                                                        <td class="text-right">1,102,800.00</td>
                                                        <td class="text-center">
                                                            <button type="button" onfocusout="PopoveLostFocus()"
                                                                    class="btn btn-btnbackcolor popover-trigger" style="padding:5px;"
                                                                    data-toggle="popover" data-content="@Action"
                                                                    data-original-title="" data-html="true" data-placement="left">
                                                                <i class="la la-bars"></i>
                                                            </button>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <div class="card-header bg-active mt-1 rounded">
                                <h4 class="card-title black">Budgetary Requirements</h4>
                            </div>
                            <div class="card-body pt-1  rounded box-shadow-3">

                                <div class="col-md-3 col-sm-3 mx-0 px-0">
                                    <button type="button" class="btn btn-btnbackcolor btn-min-width mb-1"
                                            onclick="AngularGlobalView('LBPForm6Controller','GetViewAddBudgetary','  1 ')"
                                            >Add</button>
                                </div>
                                <div class="row">
                                    <div class="table-responsive mx-1">
                                        <table class="table table-striped zero-configuration table-bordered">
                                            <thead>
                                                <tr class="text-center">
                                                    <th width="70%">Description</th>
                                                    <th>Total Amount</th>
                                                    <th width="5%">Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @{

                                                    var Edit2 = "<button class=\"btn btn-icon btn-block black btn-menuorange\" type=\"button\" onclick=\"AngularGlobalView('AIPController','GetViewActivityDetails','" + 1 + "')\"> <i class='la la-edit'></i> Edit</button>";
                                                    var Delete2 = "<button class=\"btn btn-icon btn-block btn-menuRed  border-0\" type=\"button\"> <i class='la la-trash'></i> Delete</button></div>";

                                                    var Action2 = Edit2 + Delete2;
                                                    <tr>
                                                        <td>20% of IRA for Development Fund</td>
                                                        <td class="text-right">219,000,000.00</td>
                                                        <td class="text-center">
                                                            <button type="button" onfocusout="PopoveLostFocus()"
                                                                    class="btn btn-btnbackcolor popover-trigger" style="padding:5px;"
                                                                    data-toggle="popover" data-content="@Action2"
                                                                    data-original-title="" data-html="true" data-placement="left">
                                                                <i class="la la-bars"></i>
                                                            </button>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>5% Local Disaster Risk Reduction and Management</td>
                                                        <td class="text-right">85,785,000.00</td>
                                                        <td class="text-center">
                                                            <button type="button" onfocusout="PopoveLostFocus()"
                                                                    class="btn btn-btnbackcolor popover-trigger" style="padding:5px;"
                                                                    data-toggle="popover" data-content="@Action2"
                                                                    data-original-title="" data-html="true" data-placement="left">
                                                                <i class="la la-bars"></i>
                                                            </button>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>Financial Assitance to Barangays</td>
                                                        <td class="text-right">237,000.00</td>
                                                        <td class="text-center">
                                                            <button type="button" onfocusout="PopoveLostFocus()"
                                                                    class="btn btn-btnbackcolor popover-trigger" style="padding:5px;"
                                                                    data-toggle="popover" data-content="@Action2"
                                                                    data-original-title="" data-html="true" data-placement="left">
                                                                <i class="la la-bars"></i>
                                                            </button>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @*ADD MODAL*@
    @*Add Statutory and Contractual Obligation*@
    <div class="modal fade text-left" id="ViewAddStatutoryModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel2"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header bg-active">
                    <h4 class="modal-title black" id="myModalLabel2">Add New Statutory and Contractual Obligation</h4>
                </div>
                <div class="modal-body skin skin-square">
                    <div class="row" ng-bind-html="ViewAddStatutory">

                    </div>
                </div>
                <div class="modal-footer m-0 p-1">
                    @{
                        var SuccessMess = "Added Successfully!";

                        <button type="button" class="btn bg-active btn-min-width black" onclick="swalSuccess('@SuccessMess')" data-dismiss="modal">Add</button>
                    }
                    <button type="button" class="btn bg-danger btn-min-width white" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
    @*Add Budgeraty Requirements*@
    <div class="modal fade text-left" id="ViewAddBudgetaryModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel2"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header bg-active">
                    <h4 class="modal-title black" id="myModalLabel2">Add New Budgetary Requirement</h4>
                </div>
                <div class="modal-body skin skin-square">
                    <div class="row" ng-bind-html="ViewAddBudgetary">

                    </div>
                </div>
                <div class="modal-footer m-0 p-1">
                    @{
                        var SuccessMess2 = "Added Successfully!";

                        <button type="button" class="btn bg-active btn-min-width black" onclick="swalSuccess('@SuccessMess2')" data-dismiss="modal">Add</button>
                    }
                    <button type="button" class="btn bg-danger btn-min-width white" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    app.controller('LBPForm6Controller', function ($scope, $http, $sce) {
        var F = $scope, P = $http, D = $sce.trustAsHtml;

        //Get Add PROGRAM Modal Partial View
        F.GetViewAddStatutory = function (ID) {
            P({
                url: '/PreparationLBPF6/GetViewAddStatutory',
                params: { ID: ID }
            }).then(function (response) {
                F.ViewAddStatutory = D(response.data);
                $('#ViewAddStatutoryModal').modal('toggle');
            });
        }
        //Get Add PROGRAM Modal Partial View
        F.GetViewAddBudgetary = function (ID) {
            P({
                url: '/PreparationLBPF6/GetViewAddBudgetary',
                params: { ID: ID }
            }).then(function (response) {
                F.ViewAddBudgetary = D(response.data);
                $('#ViewAddBudgetaryModal').modal('toggle');
            });
        }
    });
</script>
