@model BOSS.Models.FMAccounts.RevisionOfCOAModel
@{
    BOSSEFConnectionString BOSSDB = new BOSSEFConnectionString();
}
@using BOSS.Models;

@using (Ajax.BeginForm("AddNewRevisionCOA", "FileMaintenanceAccounts", new AjaxOptions { OnSuccess = "GlobalAlertsCallingwoModal('GetRevisionCOADT','Successfully Added!')", OnFailure = "", }))
{
    <div class="row">
        <div class="col-md-1">
        </div>
        <div class="col-md-10">
            <div class="row">
                <div class="col-md-2 col-sm-4">
                    <div class="form-group ">
                        <label style="margin-bottom:2px;">Revision Year</label>
                        @Html.TextBoxFor(m => m.getRevCOAColumns.RevYEar, new { @class = "form-control", type = "text", id = "RevYEar" })
                    </div>
                </div>
                <div class="col-md-2 col-sm-4">
                    <div class="form-group ">
                        @Html.HiddenFor(m => m.isUsed, new { id = "isUsedID" })
                        <label style="margin-bottom:2px;">Is Used?</label>
                        <select class="form-control" id="isUsedIDD" onchange="isUsedOnChange()">
                            <option value="0">Yes</option>
                            <option value="1">No</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-4 col-sm-4">
                    <div class="form-group">
                        <label style="margin-bottom:2px;">Remarks</label>
                        @Html.TextBoxFor(m => m.getRevCOAColumns.Remarks, new { @class = "form-control", type = "text", id = "Remarks" })
                    </div>
                </div>

                <div class="col-md-2 col-sm-3 mt-2">
                    <button type="submit" class="btn btn-btnbackcolor btn-min-width">
                        Add
                    </button>
                </div>
                <div class="col-md-2 col-sm-3 mt-2">
                    <button type="button" class="btn btn-menuRed btn-min-width" onclick="GetRevisionCOADT()">
                        Cancel
                    </button>
                </div>
            </div>
        </div>
    </div>
}
    <script>
        $(function () {
            isUsedOnChange();
            $("#isUsedIDD").select2({
                minimumResultsForSearch: Infinity
            });
        })
        function isUsedOnChange() {
            var isUsedValue = $("#isUsedIDD").val();
            if (isUsedValue == 0) {
                $("#isUsedID").val(true);
            } else {
                $("#isUsedID").val(false);
            }
        }
    </script>