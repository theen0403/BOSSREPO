
@{
    ViewBag.Title = "FileAccounts";
}

<script>
    $("#FileMaintenanceAccountsID").addClass("active");
</script>
@*BODY*@
<div class="content-body" id="FMAccountsController" ng-controller="FMAccountsController" ng-init="RevisionCOATab()">
    <div class="row">
        <div class="content-header-left col-md-12">
            <div class="card box-shadow-3">
                <div class="card-content collapse show">
                    <div class="card-body rounded" style="border: 1px solid; border-color: #9BC69D;">
                        @*NAV TAB*@
                        <div class="card box-shadow-2">
                            <div class="row m-0">
                                <ul class="nav nav-tabs">
                                    <li class="nav-item">
                                        <a class="nav-link active bg-backcolorheader" id="base-tabRevision" ng-click="RevisionCOATab()" data-toggle="tab" aria-controls="tabRevision" href="#tabRevision" aria-expanded="false">Revision Year</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link bg-backcolorheader" id="base-tabAllotment" ng-click="AllotmentClassTab()" data-toggle="tab" aria-controls="tabAllotment" href="#tabAllotment" aria-expanded="false">Allotment Class</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link bg-backcolorheader" id="base-tabAccntGroup" ng-click="AccountGroupTab()" data-toggle="tab" aria-controls="tabAccntGroup" href="#tabAccntGroup" aria-expanded="true">Account Group</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link bg-backcolorheader" id="base-tabMajorAccnt" ng-click="MajorAccountGroupTab()" data-toggle="tab" aria-controls="tabMajorAccnt" href="#tabMajorAccnt" aria-expanded="false">Major Account Group</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link bg-backcolorheader" id="base-tabSubMajorAccnt" ng-click="SubMajorAccountGroupTab()" data-toggle="tab" aria-controls="tabSubMajorAccnt" href="#tabSubMajorAccnt" aria-expanded="false">Sub Major Account Group</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link bg-backcolorheader" id="base-tabGenAccnt" ng-click="COATab()" data-toggle="tab" aria-controls="tabGenAccnt" href="#tabGenAccnt" aria-expanded="false">General Account</a>
                                    </li>
                                    @**<li class="nav-item">
                                        <a class="nav-link bg-backcolorheader" id="base-tab23" ng-click="PINTab()" data-toggle="tab" aria-controls="tab23" href="#tab23" aria-expanded="false">Sub Major Account Group</a>
                                    </li>*@

                                </ul>
                                <div class="tab-content w-100 skin skin-square" id="nav-tabContent">
                                    <div class="tab-content px-1 pt-1 card-body rounded box-shadow-3">

                                        <div class="tab-pane active" id="tabRevision" ng-bind-html="tabRevision">

                                        </div>
                                        <div class="tab-pane" id="tabAllotment" ng-bind-html="tabAllotment">

                                        </div>
                                        <div class="tab-pane" id="tabAccntGroup" ng-bind-html="tabAccntGroup">

                                        </div>
                                        <div class="tab-pane" id="tabMajorAccnt" ng-bind-html="tabMajorAccnt">

                                        </div>
                                        <div class="tab-pane" id="tabSubMajorAccnt" ng-bind-html="tabSubMajorAccnt">

                                        </div>
                                        <div class="tab-pane" id="tabGenAccnt" ng-bind-html="tabGenAccnt">

                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    app.controller('FMAccountsController', function ($scope, $http, $sce) {
        var F = $scope, P = $http, D = $sce.trustAsHtml;
        
        F.RevisionCOATab = function () {
            F.tabRevision = null;
            P({
                url: '/FileMaintenanceAccounts/RevisionCOATab',
            }).then(function (response) {
                F.tabRevision = D(response.data);
            });
        }
        F.AllotmentClassTab = function () {
            F.tabAllotment = null;
            P({
                url: '/FileMaintenanceAccounts/AllotmentClassTab',
            }).then(function (response) {
                F.tabAllotment = D(response.data);
            });
        }
        
        F.AccountGroupTab = function () {
            F.tabAccntGroup = null;
            P({
                url: '/FileMaintenanceAccounts/AccountGroupTab',
            }).then(function (response) {
                F.tabAccntGroup = D(response.data);
            });
        }
        
        F.MajorAccountGroupTab = function () {
            F.tabMajorAccnt = null;
            P({
                url: '/FileMaintenanceAccounts/MajorAccountGroupTab',
            }).then(function (response) {
                F.tabMajorAccnt = D(response.data);
            });
        }
        F.SubMajorAccountGroupTab = function () {
            F.tabSubMajorAccnt = null;
            P({
                url: '/FileMaintenanceAccounts/SubMajorAccountGroupTab',
            }).then(function (response) {
                F.tabSubMajorAccnt = D(response.data);
            });
        }
        
        F.COATab = function () {
            F.tabGenAccnt = null;
            P({
                url: '/FileMaintenanceAccounts/COATab',
            }).then(function (response) {
                F.tabGenAccnt = D(response.data);
            });
        }
       
        //F.PINTab = function () {
        //    F.tab23 = null;
        //    P({
        //        url: '/FileMaintenanceAccounts/PINTab',
        //    }).then(function (response) {
        //        F.tab23 = D(response.data);
        //    });
        //}
    });
</script> 