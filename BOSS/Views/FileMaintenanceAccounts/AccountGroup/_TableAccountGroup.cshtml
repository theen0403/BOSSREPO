@model IEnumerable<BOSS.Models.FMmodels.FMAccountsModels.AccountGroupList>
@{
    BOSSEFConnectionString BOSSDB = new BOSSEFConnectionString();
}
@using BOSS.Models;
<div class="row">
    <div class="offset-xl-1 col-xl-10">
        <table class="table table-striped table-bordered table-condensed zero-configuration w-100 table-smss-hover">
            <thead class="text-center">
                <tr>
                    <th width="20%">Revision Year</th>
                    <th>Allotment Class</th>
                    <th>Accounts</th>
                    <th width="5%">Account Code</th>
                    <th width="5%">Action</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var Items in Model)
                    {
                        var DeleteConfirmationMess = "Are you sure do you want to delete this?";
                        var DeleteSuccesMess = "Successfully Deleted";

                        var UpdateRevision = "<button class=\"btn btn-icon btn-block black btn-menuorange\" type=\"button\" onclick=\"GlobalEdit('Get_UpdateAccountGroup ','" + @Items.AGID + "')\"> <i class='la la-edit'></i> Edit</button>";
                        var RemoveRevision = "<button class=\"btn btn-icon btn-block btn-menuRed\" type=\"button\" onclick =\"swalConfirmation('" + @DeleteConfirmationMess + "', '" + @Items.AllotmentClassTitle + "','" + @DeleteSuccesMess + "','GlobalDelete(" + @Items.AGID + ",&quot;DeleteAccountGroup&quot;)')\"><i class='la la-trash'></i> Delete</button>";

                        var ActionRevision = UpdateRevision + RemoveRevision;

                        <tr>
                            <td class="text-center">@Items.RevYear</td>
                            <td>@Items.AllotmentClassTitle</td>
                            <td>@Items.AGTitle</td>
                            <td class="text-center">@Items.AGCode</td>
                            <td class="text-center">
                                <button type="button" onfocusout="PopoveLostFocus()"
                                        class="btn btn-m btn-btnbackcolor popover-trigger" data-placement="left"
                                        data-toggle="popover" data-content="@ActionRevision">
                                    <i class="la la-bars"></i>
                                </button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    $(function () {
        LoadDataTable();
    })
</script>