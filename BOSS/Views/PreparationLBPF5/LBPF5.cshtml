<script>
    function OpenViewNewCreditModal() {
        //var ID = $("#SupplyAccountCodeList").val();
        var IDTemp = "1";
        $.ajax({
            url: '/PreparationLBPF5/GetViewNewCredit',
            data: { ID: IDTemp },
            success: function (result) {
                $('#ViewNewCredit').html(result);
            }
        });
        $('[data-toggle="popoverAction"]').popover('hide');
    }

</script>
