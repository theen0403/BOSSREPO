
@{
    ViewBag.Title = "IndexFund";
}

<div id="fundTempID">

</div>
<div id="fundTableID">

</div>

<script>
    $(function () {
        GetFundDTable();
    })
    function GetFundDTable() {
        $.ajax({
            url: '/FileMaintenanceFund/GetFundDTable',
            success: function (result) {
                $("#fundTableID").html(result);
                Get_AddFund();
            }
        })
    }
    function Get_AddFund() {
        $.ajax({
            url: '/FileMaintenanceFund/Get_AddFund',
            success: function (result) {
                $("#fundTempID").html(result);
            }
        })
    }
    function Get_UpdateFund(FundID) {
        $.ajax({
            url: '/FileMaintenanceFund/Get_UpdateFund',
            data: { FundID: FundID },
            success: function (result) {
                $("#fundTempID").html(result);
            }
        })
    }
    function DeleteFund(FundID) {
        $.ajax({
            url: '/FileMaintenanceFund/DeleteFund',
            data: { FundID: FundID },
            success: function (result) {
                GetFundDTable();
            }
        })
    }
</script>
