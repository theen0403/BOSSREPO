    </div>
</div>

<script>
    $(function () {
        LoadDataTable();
    })
    //REVISION YEAR
    function GetAddAddRevYearAllot() {
        $.ajax({
            url: "/FileMaintenanceAccounts/GetAddAddRevYearAllot",
            success: function (result) {
                $("#ViewAddRevYearAllotID").html(result);
                $('#ViewAddRevYearAllotModal').modal('toggle');
            }
        });
    }
    //Allotment Class
    function GetAddAddAllomentClassAllot() {
        $.ajax({
            url: "/FileMaintenanceAccounts/GetAddAddAllomentClassAllot",
            success: function (result) {
                $("#ViewAddAllomentID").html(result);
                $('#ViewAddAllomentModal').modal('toggle');
            }
        });
    }
    //Account Group
    function GetAddAddAccntClass() {
        $.ajax({
            url: "/FileMaintenanceAccounts/GetAddAddAccntClass",
            success: function (result) {
                $("#ViewAddAccntID").html(result);
                $('#ViewAddAccntIDModal').modal('toggle');
            }
        });
    }
</script>