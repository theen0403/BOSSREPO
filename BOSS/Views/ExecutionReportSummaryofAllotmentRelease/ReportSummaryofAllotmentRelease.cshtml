
@{
    ViewBag.Title = "ReportSummaryofAllotmentRelease";
}
<script>
    $("#ExecutionReportSummaryofAllotmentReleaseID").addClass("active");
</script>

@*Header*@
<div class="content-header row">
    <div class=" content-header-left col-md-12 mb-0">
        <h3 class="content-header-title"><strong>Reports - Summary of Allotment Releases </strong></h3>
    </div>
</div>
@*BODY*@
<div class="content-body">
    <div class="row">
        <div class="content-header-left col-md-12">
            <div class="card box-shadow-3">
                <div class="card-content collapse show">
                    <div class="card-body rounded" style="border: 1px solid; border-color: #9BC69D;">

                        <div class="row">
                            <div class="col-md-12">
                                <div class="row">
                                    <div class="col-md-4"></div>
                                    <div class="col-md-2 col-sm-6 col-xs-6">
                                        <label><input type="radio" name="optradio">Unexecuted</label>
                                    </div>
                                    <div class="col-md-3 col-sm-6 col-xs-6">
                                        <label><input type="radio" name="optradio">Executed</label>
                                    </div>
                                    <div class="col-md-3"></div>
                                </div>
                                <div class="row mt-1">
                                    <div class="col-md-1"></div>
                                    <div class="col-md-2 col-sm-4 col-xs-4">
                                        <div class="form-group">
                                            <label>Budget Year</label>
                                            <select class="form-control">
                                                <option>2018</option>
                                                <option>2019</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-4 col-sm-4 col-xs-4">
                                        <div class="form-group">
                                            <label>Fund</label>
                                            <select class="form-control">
                                                <option>General Fund</option>
                                                <option></option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-4 col-sm-4 col-xs-4">
                                        <div class="form-group">
                                            <label>Appropriation</label>
                                            <select class="form-control">
                                                <option>Continuing Appropriations</option>
                                                <option></option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-1"></div>
                                    <div class="col-md-3 col-sm-6 col-xs-6">
                                        <div class="form-group">
                                            <label>As of</label>
                                            <select class="form-control">
                                                <option>Quarter Ending</option>
                                                <option></option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-3 col-sm-6 col-xs-6">
                                        <div class="form-group">
                                            <label>As of Date</label>
                                            <select class="form-control">
                                                <option>1/28/19</option>
                                                <option></option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col text-right">
                                        <div class="form-group">
                                            <label style="visibility:hidden">Hide</label><br />
                                            <button type="button" class="btn bg-backcolorheader white btn-min-width ">Preview</button>
                                        </div>
                                    </div>
                                    <div class="col-md-1"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
