@model IEnumerable<BOSS.Models.FMmodels.FMTaxModels.TaxList>
@{
    BOSSEFConnectionString BOSSDB = new BOSSEFConnectionString();
}
@using BOSS.Models;
<div class="row mt-2">
    <div class="col-xl-1 col-lg-1"></div>
    <div class="col-xl-10 col-lg-10">
        <table class="table table-striped zero-configuration table-bordered dataTable scroll-horizontal table-smss-hover no-footer m-0 w-100">
            <thead>
                <tr class="text-center">
                    <th>Description</th>
                    <th>Percentage</th>
                    <th>Base</th>
                    <th>Account Class</th>
                    <th>Is Used</th>
                    <th>Short Description</th>
                    <th width="5px">Action</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var Items in Model)
                    {
                        var Update = "<button class='btn btn-icon black btn-menuorange btn-block border-0' id='btnEditTaxID' TaxAttr='" + Items.TaxID + "'><i class='ft-edit'></i> Edit</button>";
                        var Remove = "<button class='btn btn-icon btn-menuRed white btn-block border-0' id='btnDeleteTaxID' TaxAttr='" + Items.TaxID + "'><i class='la la-trash'></i> Delete</button>";

                        var ActionFM = Update + Remove;

                                <tr>
                                    <td>@Items.Description</td>
                                    <td>@Items.ShortDescrption</td>
                                    <td class="text-center">
                                        @{
                                            var isUsedID = "Yes";
                                            if (Items.isUsed != true)
                                            {
                                                isUsedID = "No";
                                            }
                                        }
                                        @isUsedID
                                    </td>
                                    <td class="text-center">@Items.BaseTax</td>
                                    <td class="text-center">@Items.Percentage</td>
                                    <td>@Items.GATitle</td>
                                    <td class="text-center">
                                        <button type="button" onfocusout="PopoveLostFocus()"
                                                class="btn btn-m btn-btnbackcolor popover-trigger"
                                                data-toggle="popover" data-content="@ActionFM"
                                                data-original-title="" data-html="true" data-placement="left">
                                            <i class="la la-bars"></i>
                                        </button>
                                    </td>
                                </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    $(function () {
        LoadDataTable();
    })
</script>