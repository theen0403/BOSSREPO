
@{
    ViewBag.Title = "FileAccounts";
}

<script>
    $("#FileMaintenanceAccountsID").addClass("active");
</script>
@*BODY*@
<div class="content-body" id="FMAccountsController" ng-controller="FMAccountsController" ng-init="RevisionCOATab()">
    <div class="row">
        <div class="content-header-left col-md-12">
            <div class="card box-shadow-3">
                <div class="card-content collapse show">
                    <div class="card-body rounded" style="border: 1px solid; border-color: #9BC69D;">
                        @*NAV TAB*@
                        <div class="card box-shadow-2">
                            <div class="row m-0">
                                <ul class="nav nav-tabs">
                                    <li class="nav-item">
                                        <a class="nav-link active bg-backcolorheader" id="base-tabRevision" ng-click="RevisionCOATab()" data-toggle="tab" aria-controls="tabRevision" href="#tabRevision" aria-expanded="true">Revision Year</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link bg-backcolorheader" id="base-tab22" ng-click="COATab()" data-toggle="tab" aria-controls="tab22" href="#tab22" aria-expanded="false">Account Group</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link bg-backcolorheader" id="base-tab23" ng-click="PINTab()" data-toggle="tab" aria-controls="tab23" href="#tab23" aria-expanded="false">Major Account Group</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link bg-backcolorheader" id="base-tab23" ng-click="PINTab()" data-toggle="tab" aria-controls="tab23" href="#tab23" aria-expanded="false">Sub Major Account Group</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link bg-backcolorheader" id="base-tab25" ng-click="COATab()" data-toggle="tab" aria-controls="tab25" href="#tab25" aria-expanded="false">General Account</a>
                                    </li>
                                </ul>



                                @*<ul class="nav nav-tabs">
                                    <li class="nav-item">
                                        <a class="nav-link active bg-backcolorheader" id="base-tab21" ng-click="COATab()" data-toggle="tab" aria-controls="tab21" href="#tab21" aria-expanded="true">Charts of Accounts (2015-009)</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link bg-backcolorheader" id="base-tab22" ng-click="RevisionCOATab()" data-toggle="tab" aria-controls="tab22" href="#tab22" aria-expanded="false">Revision for Chart of Accounts</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link bg-backcolorheader" id="base-tab23" ng-click="PINTab()" data-toggle="tab" aria-controls="tab23" href="#tab23" aria-expanded="false">PIN</a>
                                    </li>
                                </ul>*@
                                @*TAB*@
                                <div class="tab-content w-100" id="nav-tabContent">
                                    <div class="tab-content px-1 pt-1 card-body rounded box-shadow-3">

                                        <div class="tab-pane active" id="tabRevision" ng-bind-html="tabRevision">

                                        </div>
                                        <div class="tab-pane" id="tab25" ng-bind-html="tab25">

                                        </div>
                                        <div class="tab-pane" id="tab23" ng-bind-html="tab23">

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    app.controller('FMAccountsController', function ($scope, $http, $sce) {
        var F = $scope, P = $http, D = $sce.trustAsHtml;
        
        F.RevisionCOATab = function () {
            F.tabRevision = null;
            P({
                url: '/FileMaintenanceAccounts/RevisionCOATab',
            }).then(function (response) {
                F.tabRevision = D(response.data);
            });
        }
        F.COATab = function () {
            F.tab25 = null;
            P({
                url: '/FileMaintenanceAccounts/COATab',
            }).then(function (response) {
                F.tab25 = D(response.data);
            });
        }
       
        F.PINTab = function () {
            F.tab23 = null;
            P({
                url: '/FileMaintenanceAccounts/PINTab',
            }).then(function (response) {
                F.tab23 = D(response.data);
            });
        }
    });
</script> 