
@{
    ViewBag.Title = "IndexFund";
}

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-4 col-sm-4">
        <div class="form-group">
            <label class="custom-form-margin">Fund</label>
            <input type="text" id="fundID" value="" class="form-control" />
        </div>
    </div>
    <div class="col-md-2 col-sm-4">
        <div class="form-group">
            <label class="custom-form-margin">Code</label>
            <input type="text" id="fundCodeID" value="" class="form-control" />
        </div>
    </div>
</div>

<div class="row mb-2">
    <div class="col-md-10">
        <div class="form-group">
            <button type="button" class="btn btn-menuRed btn-min-width float-right" onclick="GetDepartmentDT()">
                Cancel
            </button>
            <button type="submit" class="btn btn-btnbackcolor btn-min-width mr-1 float-right">
                Add
            </button>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <table class="table table-striped table-bordered table-condensed zero-configuration w-100 table-smss-hover">
            <thead class="text-center">
                <tr>
                    <th>Fund</th>
                    <th>Code</th>
                    <th width="5%" class="text-center">Action</th>

                </tr>
            </thead>
            <tbody>
                @{
                    var DeleteConfirmationMess = "Are you sure do you want to delete this?";
                    var DeleteSuccesMess = "Successfully Deleted";
                    var successUpdate = "Successfully Updated!";

                    var Update = "<div class=\"row m-small\"><button class=\"btn btn-icon black btn-menuorange form-control m-small my-0\" style=\"border-color: white \" type=\"button\" onclick=\"swalSuccess('" + successUpdate + "')\"> <i class='la la-edit'></i> Edit</button></div>";
                    var Remove = "<div class=\"row m-small\"><button class=\"btn btn-icon btn-menuRed white form-control m-small my-0\" style=\"border-color: white \" type=\"button\" onclick=\"swalConfirmation('" + @DeleteConfirmationMess + "', '', '" + @DeleteSuccesMess + "')\"><i class='la la-trash'></i> Delete</button></div>";

                    var ActionAS = Update + Remove;

                    <tr>
                        <td>Calamity Fund</td>
                        <td>400</td>
                        <td class="text-center">
                            <button type="button" onfocusout="PopoveLostFocus()"
                                    class="btn btn-m btn-btnbackcolor popover-trigger"
                                    data-toggle="popover" data-content="@ActionAS"
                                    data-original-title="" data-html="true" data-placement="left">
                                <i class="la la-bars"></i>
                            </button>
                        </td>
                    </tr>
                    <tr>
                        <td>Development Fund</td>
                        <td>500</td>
                        <td class="text-center">
                            <button type="button" onfocusout="PopoveLostFocus()"
                                    class="btn btn-m btn-btnbackcolor popover-trigger"
                                    data-toggle="popover" data-content="@ActionAS"
                                    data-original-title="" data-html="true" data-placement="left">
                                <i class="la la-bars"></i>
                            </button>
                        </td>
                    </tr>
                    <tr>
                        <td>General Fund</td>
                        <td>100</td>
                        <td class="text-center">
                            <button type="button" onfocusout="PopoveLostFocus()"
                                    class="btn btn-m btn-btnbackcolor popover-trigger"
                                    data-toggle="popover" data-content="@ActionAS"
                                    data-original-title="" data-html="true" data-placement="left">
                                <i class="la la-bars"></i>
                            </button>
                        </td>
                    </tr>
                    <tr>
                        <td>Special Education Fund</td>
                        <td>200</td>
                        <td class="text-center">
                            <button type="button" onfocusout="PopoveLostFocus()"
                                    class="btn btn-m btn-btnbackcolor popover-trigger"
                                    data-toggle="popover" data-content="@ActionAS"
                                    data-original-title="" data-html="true" data-placement="left">
                                <i class="la la-bars"></i>
                            </button>
                        </td>
                    </tr>
                    <tr>
                        <td>Trust Fund</td>
                        <td>300</td>
                        <td class="text-center">
                            <button type="button" onfocusout="PopoveLostFocus()"
                                    class="btn btn-m btn-btnbackcolor popover-trigger"
                                    data-toggle="popover" data-content="@ActionAS"
                                    data-original-title="" data-html="true" data-placement="left">
                                <i class="la la-bars"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


<script>
