@model IEnumerable<BOSS.Models.FMmodels.FMSectorModels.SubSectorList>
@{
    BOSSEFConnectionString BOSSDB = new BOSSEFConnectionString();
}
@using BOSS.Models;

<div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10">
        <table class="table table-striped table-bordered table-condensed zero-configuration w-100 table-smss-hover">
            <thead class="text-center">
                <tr>
                    <th>Sector</th>
                    <th>Sub Sector</th>
                    <th width="15%">Code</th>
                    <th width="5%" class="text-center">Action</th>

                </tr>
            </thead>
            <tbody>
                @{

                    foreach (var Items in Model)
                    {
                        var Update = "<button class='btn btn-icon black btn-menuorange btn-block border-0' id='btnEditSubSectorID' SubSectorAttr='" + Items.SubSectorID + "'><i class='ft-edit'></i> Edit</button>";
                        var Remove = "<button class='btn btn-icon btn-menuRed white btn-block border-0' id='btnDeleteSubSectorID' SubSectorAttr='" + Items.SubSectorID + "'><i class='la la-trash'></i> Delete</button>";
                        var Action = Update + Remove;

                        <tr>
                            <td>@Items.SectorTitle</td>
                            <td>@Items.SubSectorTitle</td>
                            <td class="text-center">@Items.CombinedCode</td>
                            <td class="text-center">
                                <button type="button" onfocusout="PopoveLostFocus()"
                                        class="btn btn-m btn-btnbackcolor popover-trigger"
                                        data-toggle="popover" data-content="@Action" data-html="true" data-placement="left">
                                    <i class="la la-bars"></i>
                                </button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
<script>
    $(function () {
        LoadDataTable();
    })
</script>