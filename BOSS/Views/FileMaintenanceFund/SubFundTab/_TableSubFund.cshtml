@model IEnumerable<BOSS.Models.FMmodels.FMFundModels.SubFundList>
@{
    BOSSEFConnectionString BOSSDB = new BOSSEFConnectionString();
}
@using BOSS.Models;

<div class="row">
    <div class="col-xl-2 col-lg-2 col-md-1"></div>
    <div class="col-xl-8 col-lg-8 col-md-10">
        <table class="table table-striped table-bordered table-condensed zero-configuration w-100 table-smss-hover">
            <thead class="text-center">
                <tr>
                    <th>Fund</th>
                    <th>Sub Fund</th>
                    <th width="5%">Action</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var Items in Model)
                    {

                        var DeleteConfirmationMess = "Are you sure do you want to delete this?";
                        var DeleteSuccesMess = "Successfully Deleted";

                        var UpdateSB = "<button class=\"btn btn-icon btn-block black btn-menuorange\" type=\"button\" onclick=\"GlobalEdit('Get_UpdateSubFund','" + @Items.SubFundID + "')\"> <i class='la la-edit'></i> Edit</button>";
                        var RemoveSB = "<button class=\"btn btn-icon btn-block btn-menuRed\" type=\"button\" onclick =\"swalConfirmation('" + @DeleteConfirmationMess + "', '" + @Items.SubFundTitle + "','" + @DeleteSuccesMess + "','GlobalDelete(" + @Items.SubFundID + ",&quot;DeleteSubFund&quot;)')\"><i class='la la-trash'></i> Delete</button>";
                        var ActionSB = UpdateSB + RemoveSB;

                        <tr>
                            <td>@Items.FundTitle</td>
                            <td>@Items.SubFundTitle</td>
                            <td class="text-center">
                                <button type="button" onfocusout="PopoveLostFocus()"
                                        class="btn btn-m btn-btnbackcolor popover-trigger"
                                        data-toggle="popover" data-content="@ActionSB" data-html="true" data-placement="left">
                                    <i class="la la-bars"></i>
                                </button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    $(function () {
        LoadDataTable();
    })
</script>