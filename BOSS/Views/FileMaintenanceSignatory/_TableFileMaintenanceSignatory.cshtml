@model IEnumerable<BOSS.Models.FMmodels.FMSignatoryModels.SignatoryDTList>
@{
    BOSSEFConnectionString BOSSDB = new BOSSEFConnectionString();
}
@using BOSS.Models;

<table class="table table-responsive table-bordered table-smss-hover zero-configuration w-100">
    <thead class="text-center">
        <tr>
            <th>Employee Name</th>
            <th>Preferred Name</th>
            <th>Position</th>
            <th>Department</th>
            <th>Dept.Head</th>
            <th>Function</th>
            <th>Division</th>
            <th>Is Active</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var Items in Model)
            {
                var DeleteConfirmationMess = "Are you sure do you want to delete this?";
                var DeleteSuccesMess = "Successfully Deleted";

                var Update = "<div class=\"row m-small\"><button class=\"btn btn-icon black btn-menuorange form-control m-small my-0\" style=\"border-color: white \" type=\"button\" onclick=\"AngularGlobalEdit('FMSignatoryController','Get_UpdateSignatory','" + @Items.SignatoryID + "')\"> <i class='la la-edit'></i> Edit</button></div>";
                var Remove = "<div class=\"row m-small\"><button class=\"btn btn-icon btn-menuRed white form-control m-small my-0\" style=\"border-color: white \" type=\"button\" onclick =\"swalConfirmation('" + @DeleteConfirmationMess + "', '" + @Items.SignatoryName + "','" + @DeleteSuccesMess + "','AngularGlobalDelete(" + @Items.SignatoryID + ",&quot;DeleteSignatory&quot;,&quot;FMSignatoryController&quot;)')\"><i class='la la-trash'></i> Delete</button></div>";

                var ActionFM = Update + Remove;

        <tr>
            <td>@Items.SignatoryName</td>
            <td>@Items.PreferredName</td>
            <td>@Items.PositionTitle</td>
            <td>@Items.DeptTitle</td>
            <td>
                @{
                    var isHeadValue = "Yes";
                    if (Items.isHead != 1)
                    {
                        isHeadValue = "No";
                    }
                }
                @isHeadValue
            </td>
            <td>
                @{
                    var FUncID = Items.FunctionID;
                    var FunctionName = (from e in BOSSDB.Tbl_FMRes_Function where e.FunctionID == FUncID select e).FirstOrDefault();
                    var TDValue = "";
                    if (FunctionName == null)
                    {
                        TDValue = "N/A";
                    }
                    else
                    {
                        TDValue = FunctionName.FunctionTitle;
                    }
                }
                @TDValue

            </td>
            <td>@Items.Division</td>
            <td>
                @{
                    var isActiveID = "Yes";
                    if (Items.isActive != 1)
                    {
                        isActiveID = "No";
                    }
                }
                @isActiveID

            </td>
            <td class="text-center">
                <button type="button" onfocusout="PopoveLostFocus()"
                        class="btn btn-m btn-btnbackcolor popover-trigger"
                        data-toggle="popover" data-content="@ActionFM"
                        data-original-title="" data-html="true" data-placement="left">
                    <i class="la la-bars"></i>
                </button>
            </td>
        </tr>
                @*<td>@Items.SignatoryName</td>
                <td>@Items.PositionTitle</td>
                <td>@Items.DeptTitle</td>
                <td>
                    @{
                        var FUncID = Items.FunctionID;
                        var FunctionName = (from e in BOSSDB.Tbl_FMRes_Function where e.FunctionID == FUncID select e).FirstOrDefault();
                        var TDValue = "";
                        if (FunctionName == null)
                        {
                            TDValue = "N/A";
                        }
                        else
                        {
                            TDValue = FunctionName.FunctionTitle;
                        }
                    }
                    @TDValue

                </td>
                <td>
                    @{
                        var isHeadValue = "Yes";
                        if (Items.isHead != 1)
                        {
                            isHeadValue = "No";
                        }
                    }
                    @isHeadValue
                </td>

                <td class="text-center">
                    <button type="button" onfocusout="PopoveLostFocus()"
                            class="btn btn-m btn-btnbackcolor popover-trigger"
                            data-toggle="popover" data-content="@ActionFM"
                            data-original-title="" data-html="true" data-placement="left">
                        <i class="la la-bars"></i>
                    </button>
                </td>
                </tr>*@
            }
        }
    </tbody>
</table>

<script>
    $(function () {
        LoadDataTable();
    })
</script>