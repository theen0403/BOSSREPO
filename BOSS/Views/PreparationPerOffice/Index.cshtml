<script>
    app.controller('PerOfficeController', function ($scope, $http, $sce) {
        var F = $scope, P = $http, D = $sce.trustAsHtml;

        //=========================PROGRAM TABLE =========================
        //Get PROGRAM Datatable Partial View
        F.GetProgramlistDTable = function () {
