
@model IEnumerable<BOSS.Models.FMAccounts.SubAccountList>
@{
    BOSSEFConnectionString BOSSDB = new BOSSEFConnectionString();
}
@using BOSS.Models;

<table class="table table-responsive table-striped table-bordered table-condensed zero-configuration w-100 table-smss-hover">
    <thead class="text-center">
        <tr>
            <th>Sub-Account Code</th>
            <th>Sub-Account Title</th>
            <th>With Reserve?</th>
            <th>Reserve %</th>
            <th>For Full Release?</th>
            <th>For Continuing?</th>
            <th>For OBR Cash Advance?</th>
            <th width="5%">Action</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var Items in Model)
            {
                var DeleteConfirmationMess = "Are you sure do you want to delete this?";
                var DeleteSuccesMess = "Successfully Deleted";

                var UpdateCOA = "<button class=\"btn btn-icon btn-block black btn-menuorange\" type=\"button\" onclick=\"GlobalEdit('Get_UpdateSubAcct','" + @Items.SubAccountID + "')\"> <i class='la la-edit'></i> Edit</button>";
                var RemoveCOA = "<button class=\"btn btn-icon btn-block btn-menuRed\" type=\"button\" onclick =\"swalConfirmation('" + @DeleteConfirmationMess + "', '" + @Items.SubAccountTitle + "','" + @DeleteSuccesMess + "','GlobalDelete(" + @Items.SubAccountID + ",&quot;DeleteSubAcct&quot;)')\"><i class='la la-trash'></i> Delete</button>";

                var ActionCOA = UpdateCOA + RemoveCOA;
        <tr>
            <td> @Items.SubAccountCode</td>
            <td>@Items.SubAccountTitle</td>
            <td>
                @{
                    var isReserveValue = "Yes";
                    if (Items.isReserve != 1)
                    {
                        isReserveValue = "No";
                    }
                }
                @isReserveValue
            </td>
            <td>@Items.ReservePercent</td>
            <td>
                @{
                    var isFullReleaseValue = "Yes";
                    if (Items.isFullRelease != 1)
                    {
                        isFullReleaseValue = "No";
                    }
                }
                @isFullReleaseValue
            </td>
            <td>
                @{
                    var isContinuingValue = "Yes";
                    if (Items.isContinuing != 1)
                    {
                        isContinuingValue = "No";
                    }
                }
                @isContinuingValue
            </td>
            <td>
                @{
                    var isOBRCashAdvanceValue = "Yes";
                    if (Items.isOBRCashAdvance != 1)
                    {
                        isOBRCashAdvanceValue = "No";
                    }
                }
                @isOBRCashAdvanceValue
            </td>
            <td class="text-center">
                <button type="button" onfocusout="PopoveLostFocus()"
                        class="btn btn-m btn-btnbackcolor popover-trigger"
                        data-toggle="popover" data-content="@ActionCOA" data-html="true" data-placement="left">
                    <i class="la la-bars"></i>
                </button>
            </td>

        </tr>
            }
        }
    </tbody>
</table>

<script>
    $(function () {
        LoadDataTable();
    })
</script>

