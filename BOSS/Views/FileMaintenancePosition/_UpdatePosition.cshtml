@model BOSS.Models.FMPositionforSPModels.PositionforSPModel
@{
    BOSSEFConnectionString BOSSDB = new BOSSEFConnectionString();
}
@using BOSS.Models;

@using (Ajax.BeginForm("UpdatePosition", "FileMaintenancePosition", new AjaxOptions { OnSuccess = "GlobalAlertsCallingwoModal( 'GetPositionSPDTable','Successfully Updated!')", OnFailure = "", }))
{
    @Html.HiddenFor(m => m.PositionID, new { })

    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-5">
            <div class="form-group">
                <label class="custom-form-margin">Position</label>
                <fieldset>
                    @Html.TextAreaFor(m => m.getPositionColumns2.PositionTitle, new { @class = "form-control", @rows = 1, id = "PositionTitle" })
                </fieldset>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label class="custom-form-margin">Position Code</label>
                <fieldset class="form-group">
                    @Html.TextBoxFor(m => m.getPositionColumns2.PositionCode, new { @class = "form-control", id = "PositionCode" })
                </fieldset>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-1"></div>
        <div class="col-10">
            <div class="form-group">
                <button type="button" class="btn btn-menuRed btn-min-width float-right ml-1" onclick="GetPositionSPDTable()">
                    Cancel
                </button>
                <button type="submit" class="btn btn-btnbackcolor btn-min-width float-right">
                    Update
                </button>
            </div>
        </div>
    </div>
}
<script>
    $(function () {
        select2nosearch();
    })
</script>
