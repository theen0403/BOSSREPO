@model BOSS.Models.FMmodels.FMAccountsModels.MajorAccountGroupModel
    @{
        BOSSEFConnectionString BOSSDB = new BOSSEFConnectionString();
    }
    @using BOSS.Models;
    <div class="row">
        <div class="col-xl-1"></div>
        <div class="col-xl-10">
            <table class="table table-responsive table-striped table-bordered table-condensed zero-configuration w-100 table-smss-hover">
                <thead class="text-center">
                    <tr>
                        <th width="10%">Revision Year</th>
                        <th>Allotment Class</th>
                        <th>Accounts</th>
                        <th>Major Account Group</th>
                        <th width="5%">Account Code</th>
                        <th width="5%">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var Items in Model.getMajorAccntGrpList)
                        {
                            var DeleteConfirmationMess = "Are you sure do you want to delete this?";
                            var DeleteSuccesMess = "Successfully Deleted";

                            var UpdateMAG = "<button class=\"btn btn-icon btn-block black btn-menuorange\" type=\"button\" onclick=\"GlobalEdit('Get_UpdateMajorAccountGroup ','" + @Items.MAGID + "')\"> <i class='la la-edit'></i> Edit</button>";
                            var RemoveMAG = "<button class=\"btn btn-icon btn-block btn-menuRed\" type=\"button\" onclick =\"swalConfirmation('" + @DeleteConfirmationMess + "', '" + @Items.MAGTitle + "','" + @DeleteSuccesMess + "','GlobalDelete(" + @Items.MAGID + ",&quot;DeleteMjorAccountGroup&quot;)')\"><i class='la la-trash'></i> Delete</button>";

                            var ActionMAG = UpdateMAG + RemoveMAG;

                            <tr>
                                <td class="text-center">@Items.RevYear</td>
                                <td>@Items.AllotmentClassTitle</td>
                                <td>@Items.AGTitle</td>
                                <td>@Items.MAGTitle</td>
                                <td class="text-center">@Items.MAGAccountCode</td>
                                <td class="text-center">
                                    <button type="button" onfocusout="PopoveLostFocus()"
                                            class="btn btn-m btn-btnbackcolor popover-trigger" data-placement="left"
                                            data-toggle="popover" data-content="@ActionMAG">
                                        <i class="la la-bars"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    }

                </tbody>
            </table>
        </div>
    </div>

    <script>
        $(function () {
            LoadDataTable();
        })
    </script>
