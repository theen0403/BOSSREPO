@model BOSS.Models.FMmodels.FMPayeeModels.PayeeModel
@{
    BOSSEFConnectionString BOSSDB = new BOSSEFConnectionString();
}
@using BOSS.Models;
@using (Ajax.BeginForm("AddNewPayee", "FileMaintenancePayee", new AjaxOptions { OnSuccess = "AngularGlobalAlertsCallingwoModal('FMPayeeController', 'GetPayeeDTable','Successfully Saved!')", OnFailure = "OnFailure()", }))
{
<div class="row">
    <div class="col-xl-4 col-lg-4 col-md-4">
        <div class="form-group">
            <label class="custom-form-margin">Name</label>
            @Html.TextBoxFor(m => m.getPayeeColumns.Name, new { @class = "form-control", id = "Name" })
        </div>
    </div>
    <div class="col-xl-4 col-lg-4 col-md-4">
        <div class="form-group">
            <label class="custom-form-margin">Address</label>
            @Html.TextAreaFor(m => m.getPayeeColumns.Address, new { @class = "form-control", @rows = 1, id = "Address" })
        </div>
    </div>
    <div class="col-xl-4 col-lg-4 col-md-4">
        <div class="form-group">
            <label class="custom-form-margin">Address</label>
            @Html.DropDownListFor(m => m.DeptID, Model.DeptSelectionListPayee, new { @class = "form-control select2", id = "DeptID" })
        </div>
    </div>
    <div class="col">
        <div class="form-group">
            <button type="button" class="btn btn-menuRed btn-min-width ml-1 float-right" onclick="AngularGlobalFunctions('FMPayeeController','GetPayeeDTable','')">
                Cancel
            </button>
            <button type="submit" class="btn btn-btnbackcolor btn-min-width float-right">
                Add
            </button>
        </div>
    </div>
</div>
}