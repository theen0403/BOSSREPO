@model IEnumerable<BOSS.Models.FMAppropriationSourceModels.AppropriationSourceList>
@{
    BOSSEFConnectionString BOSSDB = new BOSSEFConnectionString();
}
@using BOSS.Models;

<table class="table table-striped table-bordered zero-configuration table-smss-hover w-100">
    <thead class="text-center">
        <tr>
            <th>Appropriation Source Type</th>
            <th>Fund Source</th>
            <th>Appropriation Source</th>
            <th>Budget Year</th>
            <th width="5%">Action</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var Items in Model)
            {
                var DeleteConfirmationMess = "Are you sure do you want to delete this?";
                var DeleteSuccesMess = "Successfully Deleted";

                var Update = "<button class=\"btn btn-icon btn-block black btn-menuorange\" type=\"button\" onclick=\"GlobalEdit('Get_UpdateAppropSource','" + @Items.AppropriationID + "')\"> <i class='la la-edit'></i> Edit</button>";
                var Remove = "<button class=\"btn btn-icon btn-block btn-menuRed\" type=\"button\" onclick =\"swalConfirmation('" + @DeleteConfirmationMess + "', '" + @Items.Description + "','" + @DeleteSuccesMess + "','GlobalDelete(" + @Items.AppropriationID + ",&quot;_DeleteAppropriationSource&quot;)')\"><i class='la la-trash'></i> Delete</button>";
                
                var ActionAS = Update + Remove;

        <tr>
            <td>@Items.AppropriationSourceType</td>
            <td>@Items.FundSourceTitle</td>
            <td>@Items.Description</td>
            <td class="text-center">@Items.BudgetYearTitle</td>
            <td class="text-center">
                <button type="button" onfocusout="PopoveLostFocus()"
                        class="btn btn-m btn-btnbackcolor popover-trigger" style="padding:5px;"
                        data-toggle="popover" data-content="@ActionAS"
                        data-html="true" data-placement="left">
                    <i class="la la-bars"></i>
                </button>
            </td>
        </tr>
            }
        }
    </tbody>

</table>
<script>
    $(function () {
        LoadDataTable();
    })
</script>