                <th>Allotment Class</th>
                <th>Accounts</th>
                <th>Major Account Group</th>
                <th>Sub Major Account Group</th>
                <th>General Account</th>
                <th>Account Code</th>
                <th width="5%">Action</th>
            </tr>
        </thead>
        <tbody>

