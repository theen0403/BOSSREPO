
@{
    ViewBag.Title = "ReportStaffingandCompensation";
}
<script>
    $("#PreparationReportStaffingandCompensationID").addClass("active");
</script>

@*Header*@
<div class="content-header row">
    <div class="col">
        <h3 class="content-header-title"><strong>Reports-Staffing and Compensation Profile</strong></h3>
    </div>
</div>

@*BODY*@
<div class="content-body">
    <div class="row">
        <div class="content-header-left col-md-12">
            <div class="card box-shadow-2">
                <div class="card-content collapse show">
                    <div class="card-body rounded" style="border: 1px solid; border-color: #9BC69D;">
                        <div class="row">
                            <div class="col-md-1"></div>
                            <div class="col-md-2 col-sm-3">
                                <div class="form-group">
                                    <label>Budget Year</label>
                                    <select class="form-control">
                                        <option>2018</option>
                                        <option>2019</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-4 col-sm-5">
                                <div class="form-group">
                                    <label>Fund</label>
                                    <select class="form-control">
                                        <option>General Fund</option>
                                        <option></option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-4 col-sm-4">
                                <div class="form-group">
                                    <label>Prepared By:</label>
                                    <select class="form-control">
                                        <option>Daniel Castro</option>
                                        <option></option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="card-body box-shadow-3 rounded">
                            <div class="row">
                                <div class="col">
                                    <a class="btn btn-btnbackcolor btn-min-width mr-1 button float-right"
                                       data-caption="01/01/19" href="~/Resources/PDF/blank.pdf"
                                       target='_blank'>
                                        View Report
                                    </a>
                                    <button type="button" class="btn btn-btnbackcolor btn-min-width pull-right mr-1">Save</button>
                                    <button type="button" class="btn btn-btnbackcolor btn-min-width pull-right mr-1">Add Position/s</button>
                                    <button type="button" class="btn btn-btnbackcolor btn-min-width  pull-right mr-1">View Record</button>
                                </div>
                            </div>

                            @*Key Positions with RATA*@
                            @*First tABLE*@
                            <div class="card box-shadow-2 m-0 p-0">
                                <div class="card-header bg-active mt-1">
                                    <h4 class="card-title black">Key Positions with RATA</h4>
                                    <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                                    <div class="heading-elements mt-0">
                                        <ul class="list-inline mb-0">
                                            <li><a data-action="collapse"><i class="ft-plus black"></i></a></li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="card-content collapse">
                                    <div class="card-body px-1 card-body rounded" style="border: 1px solid; border-color: #9BC69D;">
                                        <div class="card-body m-0 p-0">

                                        </div>
                                    </div>
                                </div>
                            </div>
                            @*Second tABLE*@
                            <div class="card box-shadow-2 m-0 p-0">
                                <div class="card-header bg-active mt-1">
                                    <h4 class="card-title black">Other Technical Position</h4>
                                    <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                                    <div class="heading-elements mt-0">
                                        <ul class="list-inline mb-0">
                                            <li><a data-action="collapse"><i class="ft-plus black"></i></a></li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="card-content collapse">
                                    <div class="card-body px-1 card-body rounded" style="border: 1px solid; border-color: #9BC69D;">
                                        <div class="card-body m-0 p-0">

                                        </div>
                                    </div>
                                </div>
                            </div>
                            @*Third Table*@
                            <div class="card box-shadow-2 m-0 p-0">
                                <div class="card-header bg-active mt-1">
                                    <h4 class="card-title black">Administrative Positions</h4>
                                    <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                                    <div class="heading-elements mt-0">
                                        <ul class="list-inline mb-0">
                                            <li><a data-action="collapse"><i class="ft-plus black"></i></a></li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="card-content collapse">
                                    <div class="card-body px-1 card-body rounded" style="border: 1px solid; border-color: #9BC69D;">
                                        <div class="card-body m-0 p-0">

                                        </div>
                                    </div>
                                </div>
                            </div>
                            @*Fourth Table*@
                            <div class="card box-shadow-2 m-0 p-0">
                                <div class="card-header bg-active mt-1">
                                    <h4 class="card-title black">Non Premanent Positions</h4>
                                    <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                                    <div class="heading-elements mt-0">
                                        <ul class="list-inline mb-0">
                                            <li><a data-action="collapse"><i class="ft-plus black"></i></a></li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="card-content collapse">
                                    <div class="card-body px-1 card-body rounded" style="border: 1px solid; border-color: #9BC69D;">
                                        <div class="card-body m-0 p-0">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
