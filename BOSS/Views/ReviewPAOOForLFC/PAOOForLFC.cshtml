                                            data-target="#ViewPrintPreviewModal"
                                            onclick="OpenViewUpdatePrintPreviewModal()">
                                        Copy Values
                                    </button>
                                    <button type="button" class="btn btn-btnbackcolor btn-min-width mr-1 mb-1 float-right"
                                            data-toggle="modal"
                                            data-target="#ViewPrintPreviewModal"
                                            onclick="OpenViewUpdatePrintPreviewModal()">
                                        Print Preview
                                    </button>
                                    <button type="button" class="btn btn-btnbackcolor btn-min-width mr-1 mb-1 float-right"
