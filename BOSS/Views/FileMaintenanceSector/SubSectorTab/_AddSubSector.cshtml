@model BOSS.Models.FMmodels.FMSectorModels.SubSectorModel
@{
    BOSSEFConnectionString BOSSDB = new BOSSEFConnectionString();
}
@using BOSS.Models;
@using (Ajax.BeginForm("AddNewSubSector", "FileMaintenanceSector", new AjaxOptions { OnSuccess = "GlobalAlertsCallingwoModal( 'GetSubSectorDTable','Successfully Saved!')", OnFailure = "", }))
{
   
        <div class="row">
            <div class="col-1"></div>
            <div class="col-10">
                <div class="row">
                    <div class="col-xl-4 col-lg-4 col-md-4 col-sm-4">
                        <div class="form-group">
                            <label class="custom-form-margin">Sector</label>
                            @Html.DropDownListFor(m => m.SectorID, Model.SectorSelectionList, new { @class = "form-control select2", id = "SectorID", onchange = "GetSectorCodeField()" })

                        </div>
                    </div>
                    <div class="col-xl-4 col-lg-4 col-md-4 col-sm-4">
                        <div class="form-group">
                            <label class="custom-form-margin">Sub Sector</label>
                            @Html.TextAreaFor(m => m.getSubSectorColumns.SubSectorTitle, new { @class = "form-control", @rows = 1, id = "SubSectorTitle" })
                        </div>
                    </div>
                    <div class="col-lx-4 col-lg-4 col-md-4 col-sm-4">
                        <div class="form-group m-0 p-0">
                            <label class="custom-form-margin">Code</label>
                        </div>
                        <div class="row">
                            <div class="col-xl-4 col-lg-4 col-md-4 col-xs-4 px-0" >
                                <div class="ml-xl-5 ml-lg-3 ml-md-2" id="sectorcodeID">

                                </div>
                            </div>
                            <div class="col-1">
                                <div class="form-group m-0 p-0">
                                    <label class="custom-form-margin" style="margin-top:7px;">-</label>
                                </div>
                            </div>
                            <div class="col-xl-5 col-lg-5 col-md-5 col-xs-5 pl-0">
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.getSubSectorColumns.SubSectorCode, new { @class = "form-control", id = "SubSectorCode" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <button type="button" class="btn btn-menuRed btn-min-width float-right ml-1" onclick="GetSubSectorDTable()">
                                Cancel
                            </button>
                            <button type="submit" class="btn btn-btnbackcolor btn-min-width float-right">
                                Add
                            </button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
}
<script>
    $(function () {
        LoadICheck();
    })
</script>